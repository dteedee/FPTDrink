@model FPTDrink.Web.ViewModels.MenuPageViewModel
@using System.Linq
@{
    ViewData["Title"] = ViewData["Title"] ?? "Thực đơn";
    Func<int?, int?, decimal?, decimal?, string?, string?, string> buildUrl = (catId, supplierId, priceFrom, priceTo, sort, search) =>
        Url.Action("Index", new
        {
            categoryId = catId,
            supplierId,
            priceFrom,
            priceTo,
            sort = string.IsNullOrWhiteSpace(sort) ? null : sort,
            q = string.IsNullOrWhiteSpace(search) ? null : search,
            page = 1,
            pageSize = Model.Products.PageSize
        }) ?? string.Empty;
    var currentUrl = Url.Action("Index", new
    {
        categoryId = Model.SelectedCategoryId,
        supplierId = Model.SelectedSupplierId,
        priceFrom = Model.SelectedPriceFrom,
        priceTo = Model.SelectedPriceTo,
        sort = string.IsNullOrWhiteSpace(Model.Sort) ? null : Model.Sort,
        q = string.IsNullOrWhiteSpace(Model.Search) ? null : Model.Search,
        page = Model.Products.Page,
        pageSize = Model.Products.PageSize
    }) ?? string.Empty;
}

@section Styles {
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <style>
        .menu-hero {
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(13, 110, 253, 0.15);
            position: relative;
        }

        .menu-hero .carousel-item {
            position: relative;
        }

        .menu-hero .carousel-item img {
            width: 100%;
            height: 400px;
            object-fit: cover;
        }

        .menu-hero .carousel-caption {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 2rem;
            z-index: 1;
        }

        .menu-hero .carousel-caption .bg-dark {
            backdrop-filter: blur(5px);
        }

        @@media (max-width: 768px) {
            .menu-hero .carousel-item img {
                height: 250px;
            }
        }

        .menu-sidebar {
            background: #fff;
            border-radius: 18px;
            padding: 24px;
            box-shadow: 0 8px 24px rgba(15, 23, 42, 0.08);
            position: sticky;
            top: 96px;
        }

        .menu-sidebar h5 {
            font-size: 1.05rem;
            font-weight: 700;
            margin-bottom: 18px;
            text-transform: uppercase;
            letter-spacing: 0.06em;
        }

        .sidebar-list {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .sidebar-list li a {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 12px 16px;
            border-radius: 12px;
            color: #0f172a;
            text-decoration: none;
            font-weight: 500;
            background: #f8fafc;
            transition: all 0.3s ease;
        }

        .sidebar-list li.active a,
        .sidebar-list li a:hover {
            background: linear-gradient(135deg, rgba(13, 110, 253, 0.12), rgba(59, 130, 246, 0.12));
            color: #0d6efd;
            box-shadow: inset 0 0 0 1px rgba(13, 110, 253, 0.3);
        }

        .product-card {
            border: none;
            border-radius: 20px;
            box-shadow: 0 12px 32px rgba(15, 23, 42, 0.12);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            overflow: hidden;
        }

        .product-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 16px 40px rgba(15, 23, 42, 0.18);
        }

        .product-card img {
            height: 220px;
            object-fit: cover;
        }

        .badge-discount {
            position: absolute;
            top: 16px;
            left: 16px;
            background: #dc3545;
            color: #fff;
            padding: 6px 12px;
            border-radius: 999px;
            font-weight: 600;
            font-size: 0.85rem;
            box-shadow: 0 6px 16px rgba(220, 53, 69, 0.35);
        }

        .price-block {
            display: flex;
            align-items: baseline;
            gap: 10px;
        }

        .price-original {
            font-size: 0.95rem;
            color: #94a3b8;
            text-decoration: line-through;
        }

        .quantity-control {
            display: inline-flex;
            align-items: center;
            border-radius: 999px;
            background: #f1f5f9;
            padding: 4px;
            gap: 4px;
        }

        .quantity-control button {
            border: none;
            background: transparent;
            width: 32px;
            height: 32px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #0f172a;
        }

        .quantity-control input {
            width: 48px;
            text-align: center;
            border: none;
            background: transparent;
            font-weight: 600;
        }

        .btn-add-cart {
            border-radius: 999px;
            padding: 10px 20px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .filter-chip {
            padding: 10px 14px;
            border-radius: 12px;
            background: #eff6ff;
            color: #0d6efd;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            margin-right: 8px;
            margin-bottom: 8px;
        }

        .filter-chip .remove {
            cursor: pointer;
        }

        @@media (max-width: 992px) {
            .menu-sidebar {
                position: static;
            }
            .product-card img {
                height: 180px;
            }
        }
    </style>
}

<div class="container">
    <div class="menu-hero mb-5">
        <div id="menuCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="5000">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/images/mot.jpg" class="d-block w-100" alt="Banner 1" style="height: 400px; object-fit: cover;" loading="eager" />
                    <div class="carousel-caption text-start d-none d-md-block">
                        <div class="bg-dark bg-opacity-50 p-4 rounded">
                            <h2 class="display-5 fw-bold text-white">Menu Thức Uống Nhà FPTDrink</h2>
                            <p class="lead text-white">Khám phá hơn 100 loại đồ uống giải khát, cà phê, trà sữa, nước ép và nhiều hơn thế nữa.</p>
                            <a class="btn btn-light btn-lg mt-2" href="#menu-products">Mua ngay</a>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/images/hai.jpg" class="d-block w-100" alt="Banner 2" style="height: 400px; object-fit: cover;" loading="lazy" />
                    <div class="carousel-caption text-start d-none d-md-block">
                        <div class="bg-dark bg-opacity-50 p-4 rounded">
                            <h2 class="display-5 fw-bold text-white">Combo Ưu Đãi Đặc Biệt</h2>
                            <p class="lead text-white">Tiết kiệm đến 30% với combo nhóm, combo học bài xuyên đêm và nhiều gói hấp dẫn.</p>
                            <a class="btn btn-light btn-lg mt-2" href="#menu-products">Xem combo</a>
                        </div>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#menuCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#menuCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>

    <div class="row g-4" id="menu-products">
        <div class="col-lg-3">
            <div class="menu-sidebar">
                <h5>Danh mục</h5>
                <ul class="sidebar-list mb-4">
                    <li class="@(Model.SelectedCategoryId == null ? "active" : string.Empty)">
                        <a href="@buildUrl(null, Model.SelectedSupplierId, Model.SelectedPriceFrom, Model.SelectedPriceTo, Model.Sort, Model.Search)">
                            Tất cả
                            <span class="badge bg-light text-dark">@Model.Products.Total</span>
                        </a>
                    </li>
                    @foreach (var cat in Model.Categories)
                    {
                        var url = buildUrl(cat.Id, Model.SelectedSupplierId, Model.SelectedPriceFrom, Model.SelectedPriceTo, Model.Sort, Model.Search);
                        <li class="@(Model.SelectedCategoryId == cat.Id ? "active" : string.Empty)">
                            <a href="@url">
                                <span>@cat.Title</span>
                                <i class="bx bx-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>

                <h5>Lọc theo giá</h5>
                <ul class="sidebar-list mb-4">
                    @foreach (var price in Model.PriceRanges)
                    {
                        var url = buildUrl(Model.SelectedCategoryId, Model.SelectedSupplierId, price.From, price.To, Model.Sort, Model.Search);
                        <li class="@(price.Selected ? "active" : string.Empty)">
                            <a href="@url">@price.Label</a>
                        </li>
                    }
                </ul>

                <h5>Nhà cung cấp</h5>
                <ul class="sidebar-list">
                    <li class="@(Model.SelectedSupplierId == null ? "active" : string.Empty)">
                        <a href="@buildUrl(Model.SelectedCategoryId, null, Model.SelectedPriceFrom, Model.SelectedPriceTo, Model.Sort, Model.Search)">Tất cả</a>
                    </li>
                    @foreach (var supplier in Model.Suppliers)
                    {
                        var url = buildUrl(Model.SelectedCategoryId, supplier.Id, Model.SelectedPriceFrom, Model.SelectedPriceTo, Model.Sort, Model.Search);
                        <li class="@(Model.SelectedSupplierId == supplier.Id ? "active" : string.Empty)">
                            <a href="@url">@supplier.Title</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-4">
                <form method="get" class="flex-grow-1" asp-action="Index" asp-controller="Menu">
                    <input type="hidden" name="categoryId" value="@Model.SelectedCategoryId" />
                    <input type="hidden" name="supplierId" value="@Model.SelectedSupplierId" />
                    <input type="hidden" name="priceFrom" value="@Model.SelectedPriceFrom" />
                    <input type="hidden" name="priceTo" value="@Model.SelectedPriceTo" />
                    <input type="hidden" name="sort" value="@Model.Sort" />
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="bx bx-search"></i></span>
                        <input type="text" class="form-control" placeholder="Tìm kiếm đồ uống, ví dụ: Trà sữa, Latte..." name="q" value="@Model.Search" />
                        <button class="btn btn-primary" type="submit">Tìm kiếm</button>
                    </div>
                </form>
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Sắp xếp
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        @foreach (var option in Model.SortOptions)
                        {
                            var url = buildUrl(Model.SelectedCategoryId, Model.SelectedSupplierId, Model.SelectedPriceFrom, Model.SelectedPriceTo, string.IsNullOrWhiteSpace(option.Value) ? null : option.Value, Model.Search);
                            <li>
                                <a class="dropdown-item @(option.Selected ? "active" : string.Empty)" href="@url">@option.Label</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <div class="mb-3">
                @if (Model.SelectedCategoryId != null)
                {
                    <span class="filter-chip">
                        <i class="bx bx-category"></i> @Model.Categories.FirstOrDefault(c => c.Id == Model.SelectedCategoryId)?.Title
                        <a class="remove text-danger" href="@buildUrl(null, Model.SelectedSupplierId, Model.SelectedPriceFrom, Model.SelectedPriceTo, Model.Sort, Model.Search)"><i class="bx bx-x"></i></a>
                    </span>
                }
                @if (Model.SelectedSupplierId != null)
                {
                    <span class="filter-chip">
                        <i class="bx bx-store"></i> @Model.Suppliers.FirstOrDefault(s => s.Id == Model.SelectedSupplierId)?.Title
                        <a class="remove text-danger" href="@buildUrl(Model.SelectedCategoryId, null, Model.SelectedPriceFrom, Model.SelectedPriceTo, Model.Sort, Model.Search)"><i class="bx bx-x"></i></a>
                    </span>
                }
                @if (Model.SelectedPriceFrom != null || Model.SelectedPriceTo != null)
                {
                    var priceLabel = Model.PriceRanges.FirstOrDefault(p => p.Selected)?.Label ?? "Mức giá";
                    <span class="filter-chip">
                        <i class="bx bx-slider"></i> @priceLabel
                        <a class="remove text-danger" href="@buildUrl(Model.SelectedCategoryId, Model.SelectedSupplierId, null, null, Model.Sort, Model.Search)"><i class="bx bx-x"></i></a>
                    </span>
                }
            </div>

            <div class="row g-4">
                @if (Model.Products.Items.Count == 0)
                {
                    <div class="col-12">
                        <div class="alert alert-info">Không tìm thấy sản phẩm nào phù hợp. Vui lòng thử bộ lọc khác.</div>
                    </div>
                }
                else
                {
                    foreach (var product in Model.Products.Items)
                    {
                        var hasDiscount = product.HasDiscount;
                        var discountPercent = product.DiscountPercent;
                        var productUrl = Url.Action("Detail", "Products", new { id = product.Id });
                        <div class="col-12 col-sm-6 col-md-4">
                            <div class="card product-card h-100 position-relative">
                                @if (hasDiscount)
                                {
                                    <div class="badge-discount">-@discountPercent%</div>
                                }
                                <a href="@productUrl">
                                    <img class="card-img-top" 
                                         src="@(string.IsNullOrWhiteSpace(product.Image) ? Url.Content("~/images/placeholder.png") : product.Image)" 
                                         alt="@product.Title"
                                         loading="lazy"
                                         width="300"
                                         height="220" />
                                </a>
                                <div class="card-body d-flex flex-column">
                                    <h3 class="h6 fw-bold">@product.Title</h3>
                                    <div class="price-block mb-3">
                                        <span class="fs-5 text-primary fw-bold">@string.Format("{0:N0} ₫", product.GiaHienThi)</span>
                                        @if (hasDiscount)
                                        {
                                            <span class="price-original">@string.Format("{0:N0} ₫", product.OriginalPrice)</span>
                                        }
                                    </div>
                                    <p class="text-muted small flex-grow-1">Thức uống tươi mát, giao nhanh trong 10 phút.</p>
                                    <form method="post" asp-controller="ShoppingCart" asp-action="Add" class="mt-auto">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <input type="hidden" name="returnUrl" value="@currentUrl" />
                                        <div class="d-flex align-items-center justify-content-between gap-2">
                                            <div class="quantity-control" data-quantity>
                                                <button type="button" class="btn-minus" aria-label="Giảm"><i class="bx bx-minus"></i></button>
                                                <input type="number" name="quantity" value="1" min="1" />
                                                <button type="button" class="btn-plus" aria-label="Tăng"><i class="bx bx-plus"></i></button>
                                            </div>
                                            <button type="submit" class="btn btn-primary btn-add-cart">
                                                <i class="bx bx-cart-add"></i> Thêm
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>

            @if (Model.Products.Total > Model.Products.PageSize)
            {
                var totalPages = (int)Math.Ceiling((double)Model.Products.Total / Model.Products.PageSize);
                <nav aria-label="Menu pagination" class="mt-4">
                    <ul class="pagination justify-content-center">
                        @for (int i = 1; i <= totalPages; i++)
                        {
                            var url = Url.Action("Index", new
                            {
                                page = i,
                                pageSize = Model.Products.PageSize,
                                categoryId = Model.SelectedCategoryId,
                                supplierId = Model.SelectedSupplierId,
                                priceFrom = Model.SelectedPriceFrom,
                                priceTo = Model.SelectedPriceTo,
                                sort = string.IsNullOrWhiteSpace(Model.Sort) ? null : Model.Sort,
                                q = string.IsNullOrWhiteSpace(Model.Search) ? null : Model.Search
                            });
                            <li class="page-item @(Model.Products.Page == i ? "active" : string.Empty)">
                                <a class="page-link" href="@url">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('[data-quantity]').forEach(function (container) {
            const input = container.querySelector('input[name="quantity"]');
            container.querySelector('.btn-minus').addEventListener('click', function () {
                const current = parseInt(input.value || '1', 10);
                input.value = Math.max(1, current - 1);
            });
            container.querySelector('.btn-plus').addEventListener('click', function () {
                const current = parseInt(input.value || '1', 10);
                input.value = current + 1;
            });
        });
    </script>
}
