@model FPTDrink.Web.ViewModels.MenuPageViewModel
@using System.Linq
@{
    ViewData["Title"] = ViewData["Title"] ?? "Thực đơn";
    Func<int?, string?, decimal?, decimal?, string?, string?, string> buildUrl = (catId, supplierId, priceFrom, priceTo, sort, search) =>
        Url.Action("Index", new
        {
            categoryId = catId,
            supplierId,
            priceFrom,
            priceTo,
            sort = string.IsNullOrWhiteSpace(sort) ? null : sort,
            q = string.IsNullOrWhiteSpace(search) ? null : search,
            page = 1,
            pageSize = Model.Products.PageSize
        }) ?? string.Empty;
    var currentUrl = Url.Action("Index", new
    {
        categoryId = Model.SelectedCategoryId,
        supplierId = Model.SelectedSupplierId,
        priceFrom = Model.SelectedPriceFrom,
        priceTo = Model.SelectedPriceTo,
        sort = string.IsNullOrWhiteSpace(Model.Sort) ? null : Model.Sort,
        q = string.IsNullOrWhiteSpace(Model.Search) ? null : Model.Search,
        page = Model.Products.Page,
        pageSize = Model.Products.PageSize
    }) ?? string.Empty;
}

@section Styles {
    <style>
        .menu-hero {
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(139, 90, 43, 0.2);
            position: relative;
            margin-bottom: 3rem;
            height: 500px;
            min-height: 500px;
        }

        .menu-hero .carousel,
        .menu-hero .carousel-inner {
            height: 100% !important;
        }

        .menu-hero .carousel-item {
            height: 500px !important;
            min-height: 500px !important;
            max-height: 500px !important;
            background-color: #f5f0e8 !important;
            position: relative !important;
        }

        .menu-hero .carousel-item img {
            width: 100% !important;
            height: 500px !important;
            object-fit: contain !important;
            object-position: center !important;
            display: block !important;
            opacity: 1 !important;
            visibility: visible !important;
        }

        @@media (max-width: 768px) {
            .menu-hero {
                height: 300px !important;
                min-height: 300px !important;
            }
            
            .menu-hero .carousel-item {
                height: 300px !important;
                min-height: 300px !important;
                max-height: 300px !important;
            }
            
            .menu-hero .carousel-item img {
                height: 300px !important;
                max-height: 300px !important;
            }
        }

        .menu-hero .carousel-caption .bg-dark {
            background: linear-gradient(135deg, rgba(45, 27, 14, 0.95) 0%, rgba(26, 15, 8, 0.9) 100%) !important;
            backdrop-filter: blur(12px);
            border: 2px solid rgba(212, 165, 116, 0.4);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.5);
        }

        .menu-hero .carousel-caption h2 {
            color: #f0c896 !important;
            text-shadow: 0 4px 12px rgba(0, 0, 0, 0.6);
        }

        .menu-hero .carousel-caption .lead {
            color: #e8ddd0 !important;
        }

        .menu-hero .btn-light {
            background: linear-gradient(135deg, #d4a574 0%, #f0c896 100%) !important;
            color: #1a0f08 !important;
            border: none;
            font-weight: 700;
            box-shadow: 0 6px 20px rgba(212, 165, 116, 0.5);
        }

        .menu-sidebar {
            background: linear-gradient(135deg, #faf8f5 0%, #f5f0e8 100%);
            border-radius: 18px;
            padding: 24px;
            box-shadow: 0 8px 24px rgba(139, 90, 43, 0.15);
            border: 2px solid rgba(212, 165, 116, 0.2);
            position: sticky;
            top: 96px;
        }

        .menu-sidebar h5 {
            font-size: 1.05rem;
            font-weight: 700;
            margin-bottom: 18px;
            color: #2d1b0e;
            text-transform: uppercase;
            letter-spacing: 0.06em;
            border-bottom: 2px solid rgba(212, 165, 116, 0.3);
            padding-bottom: 10px;
        }

        .sidebar-list {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .sidebar-list li a {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 12px 16px;
            border-radius: 12px;
            color: #2d1b0e;
            text-decoration: none;
            font-weight: 500;
            background: rgba(255, 255, 255, 0.6);
            border: 1px solid rgba(212, 165, 116, 0.2);
            transition: all 0.3s ease;
        }

        .sidebar-list li.active a,
        .sidebar-list li a:hover {
            background: linear-gradient(135deg, rgba(212, 165, 116, 0.15) 0%, rgba(139, 90, 43, 0.1) 100%);
            color: #1a0f08;
            border-color: rgba(212, 165, 116, 0.4);
            transform: translateX(5px);
            box-shadow: 0 4px 12px rgba(212, 165, 116, 0.2);
        }


        .price-block {
            display: flex;
            align-items: baseline;
            gap: 10px;
        }

        .price-original {
            font-size: 0.95rem;
            color: #8b7a66;
            text-decoration: line-through;
        }

        .filter-chip {
            padding: 10px 14px;
            border-radius: 12px;
            background: linear-gradient(135deg, rgba(212, 165, 116, 0.1) 0%, rgba(139, 90, 43, 0.05) 100%);
            color: #2d1b0e;
            border: 1px solid rgba(212, 165, 116, 0.3);
            display: inline-flex;
            align-items: center;
            gap: 8px;
            margin-right: 8px;
            margin-bottom: 8px;
            font-weight: 500;
        }

        .filter-chip .remove {
            cursor: pointer;
            color: #dc3545;
            transition: transform 0.2s ease;
        }

        .filter-chip .remove:hover {
            transform: scale(1.2);
        }

        .form-control,
        .form-select {
            border: 2px solid rgba(212, 165, 116, 0.3);
            border-radius: 10px;
            background: #ffffff;
            color: #2d1b0e;
            transition: all 0.3s ease;
        }

        .form-control:focus,
        .form-select:focus {
            border-color: #d4a574;
            box-shadow: 0 0 0 0.2rem rgba(212, 165, 116, 0.25);
            background: #ffffff;
        }

        .input-group-text {
            background: linear-gradient(135deg, rgba(212, 165, 116, 0.1) 0%, rgba(139, 90, 43, 0.05) 100%);
            border: 2px solid rgba(212, 165, 116, 0.3);
            border-right: none;
            border-radius: 10px 0 0 10px;
            color: #2d1b0e;
        }

        .input-group .form-control {
            border-left: none;
            border-radius: 0;
        }

        .input-group .form-control:focus {
            border-left: none;
        }

        .input-group .btn-primary {
            background: linear-gradient(135deg, #d4a574 0%, #f0c896 100%);
            border: 2px solid #d4a574;
            border-left: none;
            border-radius: 0 10px 10px 0;
            color: #1a0f08;
            font-weight: 700;
            transition: all 0.3s ease;
            box-shadow: 0 2px 8px rgba(212, 165, 116, 0.3);
        }

        .input-group .btn-primary:hover {
            background: linear-gradient(135deg, #f0c896 0%, #d4a574 100%);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(212, 165, 116, 0.4);
        }

        .btn-outline-secondary {
            border: 2px solid rgba(212, 165, 116, 0.3);
            color: #2d1b0e;
            background: linear-gradient(135deg, rgba(212, 165, 116, 0.1) 0%, rgba(139, 90, 43, 0.05) 100%);
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-outline-secondary:hover {
            background: linear-gradient(135deg, #d4a574 0%, #f0c896 100%);
            border-color: #d4a574;
            color: #1a0f08;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(212, 165, 116, 0.3);
        }

        .dropdown-menu {
            background: linear-gradient(135deg, #faf8f5 0%, #f5f0e8 100%);
            border: 2px solid rgba(212, 165, 116, 0.3);
            border-radius: 12px;
            box-shadow: 0 8px 24px rgba(139, 90, 43, 0.15);
            padding: 0.5rem;
        }

        .dropdown-item {
            color: #2d1b0e;
            border-radius: 8px;
            padding: 0.5rem 1rem;
            transition: all 0.3s ease;
        }

        .dropdown-item:hover {
            background: linear-gradient(135deg, rgba(212, 165, 116, 0.15) 0%, rgba(139, 90, 43, 0.1) 100%);
            color: #1a0f08;
        }

        .dropdown-item.active {
            background: linear-gradient(135deg, #d4a574 0%, #f0c896 100%);
            color: #1a0f08;
            font-weight: 700;
        }

        @@media (max-width: 992px) {
            .menu-sidebar {
                position: static;
                margin-bottom: 2rem;
            }
        }

        @@media (max-width: 768px) {
            .menu-hero {
                height: 300px !important;
                min-height: 300px !important;
            }
            
            .menu-hero .carousel-item {
                height: 300px !important;
                min-height: 300px !important;
                max-height: 300px !important;
            }
            
            .menu-hero .carousel-item img {
                max-height: 300px !important;
                height: 100% !important;
            }
        }
    </style>
}

<div class="container">
    <div class="menu-hero mb-5">
        <div id="menuCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="5000">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/images/mot.jpg" class="d-block w-100" alt="Banner 1" loading="eager" />
                    <div class="carousel-caption text-start d-none d-md-block">
                        <div class="bg-dark bg-opacity-50 p-4 rounded">
                            <h2 class="display-5 fw-bold text-white">Menu Thức Uống Nhà FPTDrink</h2>
                            <p class="lead text-white">Khám phá hơn 100 loại đồ uống giải khát, cà phê, trà sữa, nước ép và nhiều hơn thế nữa.</p>
                            <a class="btn btn-light btn-lg mt-2" href="#menu-products">Mua ngay</a>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/images/hai.jpg" class="d-block w-100" alt="Banner 2" loading="eager" />
                    <div class="carousel-caption text-start d-none d-md-block">
                        <div class="bg-dark bg-opacity-50 p-4 rounded">
                            <h2 class="display-5 fw-bold text-white">Combo Ưu Đãi Đặc Biệt</h2>
                            <p class="lead text-white">Tiết kiệm đến 30% với combo nhóm, combo học bài xuyên đêm và nhiều gói hấp dẫn.</p>
                            <a class="btn btn-light btn-lg mt-2" href="#menu-products">Xem combo</a>
                        </div>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#menuCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#menuCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>

    <div class="row g-4" id="menu-products">
        <div class="col-lg-3">
            <div class="menu-sidebar">
                <h5>Danh mục</h5>
                <ul class="sidebar-list mb-4">
                    <li class="@(Model.SelectedCategoryId == null ? "active" : string.Empty)">
                        <a href="@buildUrl(null, Model.SelectedSupplierId, Model.SelectedPriceFrom, Model.SelectedPriceTo, Model.Sort, Model.Search)">
                            Tất cả
                            <span class="badge bg-light text-dark">@Model.Products.Total</span>
                        </a>
                    </li>
                    @foreach (var cat in Model.Categories)
                    {
                        var url = buildUrl(cat.Id, Model.SelectedSupplierId, Model.SelectedPriceFrom, Model.SelectedPriceTo, Model.Sort, Model.Search);
                        <li class="@(Model.SelectedCategoryId == cat.Id ? "active" : string.Empty)">
                            <a href="@url">
                                <span>@cat.Title</span>
                                <i class="bx bx-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>

                <h5>Lọc theo giá</h5>
                <ul class="sidebar-list mb-4">
                    @foreach (var price in Model.PriceRanges)
                    {
                        var url = buildUrl(Model.SelectedCategoryId, Model.SelectedSupplierId, price.From, price.To, Model.Sort, Model.Search);
                        <li class="@(price.Selected ? "active" : string.Empty)">
                            <a href="@url">@price.Label</a>
                        </li>
                    }
                </ul>

                <h5>Nhà cung cấp</h5>
                <ul class="sidebar-list">
                    <li class="@(Model.SelectedSupplierId == null ? "active" : string.Empty)">
                        <a href="@buildUrl(Model.SelectedCategoryId, null, Model.SelectedPriceFrom, Model.SelectedPriceTo, Model.Sort, Model.Search)">Tất cả</a>
                    </li>
                    @foreach (var supplier in Model.Suppliers)
                    {
                        var url = buildUrl(Model.SelectedCategoryId, supplier.Id, Model.SelectedPriceFrom, Model.SelectedPriceTo, Model.Sort, Model.Search);
                        <li class="@(Model.SelectedSupplierId == supplier.Id ? "active" : string.Empty)">
                            <a href="@url">@supplier.Title</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-4">
                <form method="get" class="flex-grow-1" asp-action="Index" asp-controller="Menu">
                    <input type="hidden" name="categoryId" value="@Model.SelectedCategoryId" />
                    <input type="hidden" name="supplierId" value="@Model.SelectedSupplierId" />
                    <input type="hidden" name="priceFrom" value="@Model.SelectedPriceFrom" />
                    <input type="hidden" name="priceTo" value="@Model.SelectedPriceTo" />
                    <input type="hidden" name="sort" value="@Model.Sort" />
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="bx bx-search"></i></span>
                        <input type="text" class="form-control" placeholder="Tìm kiếm đồ uống, ví dụ: Trà sữa, Latte..." name="q" value="@Model.Search" />
                        <button class="btn btn-primary" type="submit">Tìm kiếm</button>
                    </div>
                </form>
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Sắp xếp
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        @foreach (var option in Model.SortOptions)
                        {
                            var url = buildUrl(Model.SelectedCategoryId, Model.SelectedSupplierId, Model.SelectedPriceFrom, Model.SelectedPriceTo, string.IsNullOrWhiteSpace(option.Value) ? null : option.Value, Model.Search);
                            <li>
                                <a class="dropdown-item @(option.Selected ? "active" : string.Empty)" href="@url">@option.Label</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <div class="mb-3">
                @if (Model.SelectedCategoryId != null)
                {
                    <span class="filter-chip">
                        <i class="bx bx-category"></i> @Model.Categories.FirstOrDefault(c => c.Id == Model.SelectedCategoryId)?.Title
                        <a class="remove text-danger" href="@buildUrl(null, Model.SelectedSupplierId, Model.SelectedPriceFrom, Model.SelectedPriceTo, Model.Sort, Model.Search)"><i class="bx bx-x"></i></a>
                    </span>
                }
                @if (Model.SelectedSupplierId != null)
                {
                    <span class="filter-chip">
                        <i class="bx bx-store"></i> @Model.Suppliers.FirstOrDefault(s => s.Id == Model.SelectedSupplierId)?.Title
                        <a class="remove text-danger" href="@buildUrl(Model.SelectedCategoryId, null, Model.SelectedPriceFrom, Model.SelectedPriceTo, Model.Sort, Model.Search)"><i class="bx bx-x"></i></a>
                    </span>
                }
                @if (Model.SelectedPriceFrom != null || Model.SelectedPriceTo != null)
                {
                    var priceLabel = Model.PriceRanges.FirstOrDefault(p => p.Selected)?.Label ?? "Mức giá";
                    <span class="filter-chip">
                        <i class="bx bx-slider"></i> @priceLabel
                        <a class="remove text-danger" href="@buildUrl(Model.SelectedCategoryId, Model.SelectedSupplierId, null, null, Model.Sort, Model.Search)"><i class="bx bx-x"></i></a>
                    </span>
                }
            </div>

            <div class="row g-4">
                @if (Model.Products.Items.Count == 0)
                {
                    <div class="col-12">
                        <div class="alert alert-info">Không tìm thấy sản phẩm nào phù hợp. Vui lòng thử bộ lọc khác.</div>
                    </div>
                }
                else
                {
                    foreach (var product in Model.Products.Items)
                    {
                        var hasDiscount = product.HasDiscount;
                        var discountPercent = product.DiscountPercent;
                        var productUrl = Url.Action("Detail", "Products", new { id = product.Id });
                        <div class="col-12 col-sm-6 col-md-4">
                            <div class="product-card menu-page-card card h-100 position-relative">
                                @if (hasDiscount)
                                {
                                    <span class="badge bg-danger position-absolute top-0 start-0 m-2 px-2 py-1 fw-bold" style="z-index: 10; font-size: 0.75rem;">-@discountPercent%</span>
                                }
                                <a href="@productUrl">
                                    @{
                                        var menuImageUrl = !string.IsNullOrWhiteSpace(product.Image) 
                                            ? ImagePathHelper.GetImageUrl(product.Image) 
                                            : Url.Content("~/images/placeholder.png");
                                    }
                                    <img class="card-img-top" 
                                         src="@menuImageUrl" 
                                         alt="@product.Title"
                                         loading="lazy"
                                         onerror="this.onerror=null; this.src='@Url.Content("~/images/placeholder.png")';" />
                                </a>
                                <div class="card-body d-flex flex-column">
                                    <h3 class="h6 fw-bold">@product.Title</h3>
                                    <div class="price-block mb-3">
                                        <span class="fs-5 text-primary fw-bold">@string.Format("{0:N0} ₫", product.GiaHienThi)</span>
                                        @if (hasDiscount)
                                        {
                                            <span class="text-muted price-original">@string.Format("{0:N0} ₫", product.OriginalPrice)</span>
                                        }
                                    </div>
                                    <p class="text-muted small flex-grow-1 mb-2">
                                        <i class="bx bx-package me-1"></i>Số lượng còn lại: <strong>@product.SoLuong</strong>
                                    </p>
                                    <form method="post" asp-controller="ShoppingCart" asp-action="Add" class="mt-auto">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <input type="hidden" name="returnUrl" value="@currentUrl" />
                                        <div class="d-flex align-items-center justify-content-between gap-2">
                                            <div class="quantity-control" data-quantity data-max="@product.SoLuong" data-stock="@product.SoLuong">
                                                <button type="button" class="btn-minus" aria-label="Giảm" @(product.SoLuong == 0 ? "disabled" : "")><i class="bx bx-minus"></i></button>
                                                <input type="number" name="quantity" value="@(product.SoLuong > 0 ? 1 : 0)" min="0" max="@product.SoLuong" @(product.SoLuong == 0 ? "disabled" : "") />
                                                <button type="button" class="btn-plus" aria-label="Tăng" @(product.SoLuong == 0 ? "disabled" : "")><i class="bx bx-plus"></i></button>
                                            </div>
                                            <button type="submit" class="btn btn-primary btn-add-cart" @(product.SoLuong == 0 ? "disabled" : "")>
                                                <i class="bx bx-cart-add"></i> Thêm
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>

            @if (Model.Products.Total > Model.Products.PageSize)
            {
                var totalPages = (int)Math.Ceiling((double)Model.Products.Total / Model.Products.PageSize);
                <nav aria-label="Menu pagination" class="mt-4">
                    <ul class="pagination justify-content-center">
                        @for (int i = 1; i <= totalPages; i++)
                        {
                            var url = Url.Action("Index", new
                            {
                                page = i,
                                pageSize = Model.Products.PageSize,
                                categoryId = Model.SelectedCategoryId,
                                supplierId = Model.SelectedSupplierId,
                                priceFrom = Model.SelectedPriceFrom,
                                priceTo = Model.SelectedPriceTo,
                                sort = string.IsNullOrWhiteSpace(Model.Sort) ? null : Model.Sort,
                                q = string.IsNullOrWhiteSpace(Model.Search) ? null : Model.Search
                            });
                            <li class="page-item @(Model.Products.Page == i ? "active" : string.Empty)">
                                <a class="page-link" href="@url">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function() {
            const quantityContainers = document.querySelectorAll('[data-quantity]');
            
            quantityContainers.forEach(function (container) {
            const input = container.querySelector('input[name="quantity"]');
                if (!input) return;
                
                const btnMinus = container.querySelector('.btn-minus');
                const btnPlus = container.querySelector('.btn-plus');
                
                if (!btnMinus || !btnPlus) return;
                
                // Get max quantity from data attribute
                const maxQuantity = parseInt(container.getAttribute('data-max') || '0', 10);
                const stock = parseInt(container.getAttribute('data-stock') || '0', 10);
                
                // If out of stock, disable everything and set value to 0
                if (stock === 0) {
                    input.value = 0;
                    input.disabled = true;
                    btnMinus.disabled = true;
                    btnPlus.disabled = true;
                    return;
                }
                
                // Set initial value if needed
                if (parseInt(input.value || '0', 10) === 0 && stock > 0) {
                    input.value = 1;
                }
                
                // Remove any existing listeners by cloning
                const newBtnMinus = btnMinus.cloneNode(true);
                const newBtnPlus = btnPlus.cloneNode(true);
                btnMinus.parentNode.replaceChild(newBtnMinus, btnMinus);
                btnPlus.parentNode.replaceChild(newBtnPlus, btnPlus);
                
                // Add click handlers
                newBtnMinus.addEventListener('click', function (e) {
                    e.preventDefault();
                    e.stopPropagation();
                    e.stopImmediatePropagation();
                    
                    if (input.disabled || stock === 0) return;
                    
                    const current = parseInt(input.value || '1', 10);
                    const newValue = Math.max(1, current - 1);
                    input.value = newValue;
                }, true);
                
                newBtnPlus.addEventListener('click', function (e) {
                    e.preventDefault();
                    e.stopPropagation();
                    e.stopImmediatePropagation();
                    
                    if (input.disabled || stock === 0) return;
                    
                const current = parseInt(input.value || '1', 10);
                    const newValue = Math.min(maxQuantity, current + 1);
                    input.value = newValue;
                }, true);
                
                // Prevent input from being changed by spinner arrows
                input.addEventListener('keydown', function (e) {
                    if (e.key === 'ArrowUp' || e.key === 'ArrowDown') {
                        e.preventDefault();
                    }
                });
                
                // Validate input on change
                input.addEventListener('change', function() {
                    if (stock === 0) {
                        this.value = 0;
                        return;
                    }
                    const val = parseInt(this.value || '1', 10);
                    if (val < 1) this.value = 1;
                    if (val > maxQuantity) this.value = maxQuantity;
            });
        });
        })();
    </script>
}
