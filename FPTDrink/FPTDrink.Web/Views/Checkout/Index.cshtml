@model FPTDrink.Web.ViewModels.CheckoutViewModel
@{
	ViewData["Title"] = "Thanh toán";
	var cart = (FPTDrink.Web.ViewModels.CartViewModel)ViewBag.Cart;
	var total = cart.Items.Sum(i => i.TotalPrice);
}

<section class="checkout-section">
    <div class="container-fluid px-lg-4">
        <div class="section-header text-center mb-4">
            <h2 class="display-6 fw-bold text-dark">
                <i class="bx bx-credit-card me-2"></i>Thanh toán đơn hàng
            </h2>
            <p class="text-muted">Vui lòng điền đầy đủ thông tin để hoàn tất đơn hàng của bạn</p>
        </div>

<div class="row g-4">
            <div class="col-lg-7">
                <div class="checkout-card">
                    <div class="card-body p-4 p-lg-5">
                        <h4 class="fw-bold mb-4 text-brown">
                            <i class="bx bx-user me-2"></i>Thông tin người nhận
                        </h4>

                        <form method="post" id="checkoutForm" novalidate>
                            <div class="row g-4">
					<div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label" for="fullName">
                                            Họ và tên <span class="text-danger">*</span>
                                        </label>
                                        <div class="input-wrapper">
                                            <input asp-for="TenKhachHang"
                                                   class="form-control form-input"
                                                   id="fullName"
                                                   placeholder="Nguyễn Văn A"
                                                   autocomplete="name"
                                                   data-validate="required|name" />
                                            <i class="bx bx-user input-prefix-icon"></i>
                                            <i class="bx validation-icon"></i>
                                        </div>
                                        <div class="form-feedback"></div>
                                    </div>
					</div>

					<div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label" for="phoneNumber">
                                            Số điện thoại <span class="text-danger">*</span>
                                        </label>
                                        <div class="input-wrapper">
                                            <input asp-for="SoDienThoai"
                                                   class="form-control form-input"
                                                   id="phoneNumber"
                                                   type="tel"
                                                   placeholder="0912345678"
                                                   maxlength="10"
                                                   inputmode="numeric"
                                                   autocomplete="tel"
                                                   data-validate="required|phone" />
                                            <i class="bx bx-phone input-prefix-icon"></i>
                                            <i class="bx validation-icon"></i>
                                        </div>
                                        <div class="form-feedback"></div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-group">
                                        <label class="form-label" for="email">
                                            Email <span class="text-danger">*</span>
                                        </label>
                                        <div class="input-wrapper">
                                            <input asp-for="Email"
                                                   class="form-control form-input"
                                                   id="email"
                                                   type="email"
                                                   placeholder="example@email.com"
                                                   autocomplete="email"
                                                   data-validate="required|email" />
                                            <i class="bx bx-envelope input-prefix-icon"></i>
                                            <i class="bx validation-icon"></i>
                                        </div>
                                        <div class="form-feedback"></div>
                                    </div>
					</div>

                                <div class="col-12">
                                    <div class="form-group">
                                        <label class="form-label" for="address">
                                            Địa chỉ giao hàng <span class="text-danger">*</span>
                                        </label>
                                        <div class="input-wrapper">
                                            <input asp-for="DiaChi"
                                                   class="form-control form-input"
                                                   id="address"
                                                   placeholder="Số nhà, tên đường, phường/xã, quận/huyện"
                                                   autocomplete="street-address"
                                                   data-validate="required|address" />
                                            <i class="bx bx-map input-prefix-icon"></i>
                                            <i class="bx validation-icon"></i>
					</div>
                                        <div class="form-feedback"></div>
					</div>
					</div>

                                <div class="col-12">
                                    <div class="form-group">
                                        <label class="form-label" for="paymentMethod">
                                            <i class="bx bx-credit-card me-2"></i>Phương thức thanh toán
                                        </label>
                                        <select asp-for="TypePayment"
                                                class="form-select form-input"
                                                id="paymentMethod">
                                            <option value="1" selected>COD - Thanh toán khi nhận hàng</option>
                                            <option value="2">VNPay - Thanh toán trực tuyến</option>
                                            <option value="3">Thanh toán trực tiếp tại cửa hàng</option>
						</select>
					</div>
				</div>
				</div>

                            <div class="d-grid gap-2 mt-4">
                                <button type="submit" class="btn btn-submit" id="submitBtn">
                                    <span class="btn-text">
                                        <i class="bx bx-check-circle me-2"></i>Xác nhận đặt hàng
                                    </span>
                                    <span class="btn-loading">
                                        <span class="spinner-border spinner-border-sm me-2"></span>Đang xử lý...
                                    </span>
                                </button>
			</div>
		</form>
	</div>
                </div>
            </div>

            <div class="col-lg-5">
                <div class="checkout-card order-summary sticky-top">
                    <div class="card-header">
                        <h4 class="fw-bold mb-0">
                            <i class="bx bx-receipt me-2"></i>Đơn hàng của bạn
                        </h4>
                    </div>
                    <div class="card-body p-4">
                        <div class="order-items">
				@foreach (var item in cart.Items)
				{
                            <div class="order-item">
                                <div class="item-image">
                                    @{
                                        var checkoutImageUrl = !string.IsNullOrWhiteSpace(item.ProductImg) 
                                            ? ImagePathHelper.GetImageUrl(item.ProductImg) 
                                            : Url.Content("~/images/placeholder.png");
                                    }
                                    <img src="@checkoutImageUrl"
                                         alt="@item.ProductName"
                                         loading="lazy"
                                         style="width:100% !important; height:100% !important; display:block !important; object-fit:cover !important; visibility:visible !important; opacity:1 !important;" />
                                </div>
                                <div class="item-details">
                                    <h6 class="item-name">@item.ProductName</h6>
                                    <p class="item-quantity">
                                        Số lượng:
                                        <span>@item.Quantity</span>
                                    </p>
                                </div>
                                <div class="item-price">
                                    @string.Format("{0:N0}₫", item.TotalPrice)
							</div>
					</div>
				}
			</div>

                        <div class="order-divider"></div>

                        <div class="order-total">
                            <span class="total-label">Tổng thanh toán</span>
                            <span class="total-amount">@string.Format("{0:N0}₫", total)</span>
			</div>
		</div>
	</div>

                <div class="security-badge mt-3">
                    <i class="bx bx-lock-alt me-2"></i>
                    <span>Giao dịch của bạn được bảo mật và mã hóa</span>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <style>
        :root {
            --primary-color: #d4a574;
            --primary-dark: #b8915f;
            --text-dark: #2d1b0e;
            --text-muted: #6c757d;
            --success-color: #28a745;
            --error-color: #dc3545;
            --border-color: rgba(212, 165, 116, 0.3);
            --bg-light: #faf8f5;
            --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.08);
            --shadow-md: 0 4px 16px rgba(0, 0, 0, 0.12);
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .checkout-section {
            padding: 3rem 0;
            background: linear-gradient(135deg, #fafafa 0%, var(--bg-light) 100%);
            min-height: 100vh;
        }

        .text-brown {
            color: var(--text-dark);
        }

        .checkout-card {
            background: #ffffff;
            border: 2px solid var(--border-color);
            border-radius: 20px;
            box-shadow: var(--shadow-md);
            transition: var(--transition);
            overflow: hidden;
        }

        .checkout-card:hover {
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        }

        .checkout-card .card-header {
            background: linear-gradient(135deg, rgba(212, 165, 116, 0.12) 0%, rgba(212, 165, 116, 0.05) 100%);
            border-bottom: 2px solid var(--border-color);
            padding: 1.5rem;
        }

        .form-group {
            margin-bottom: 0;
        }

        .form-label {
            color: var(--text-dark);
            font-weight: 600;
            font-size: 0.95rem;
            margin-bottom: 0.5rem;
            display: block;
        }

        .input-wrapper {
            position: relative;
        }

        .form-input {
            width: 100%;
            padding: 0.875rem 3rem 0.875rem 3rem;
            border: 2px solid var(--border-color);
            border-radius: 12px;
            font-size: 1rem;
            color: var(--text-dark);
            background: #ffffff;
            transition: var(--transition);
        }
        
        /* Select (phương thức thanh toán) - bỏ mũi tên và nền */
        .form-select.form-input {
            appearance: none;
            -webkit-appearance: none;
            -moz-appearance: none;
            background-image: none !important;
            background-color: #ffffff;
        }

        .form-input:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 4px rgba(212, 165, 116, 0.1);
            background: #ffffff;
        }

        .form-input::placeholder {
            color: #999;
        }

        .input-prefix-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.25rem;
            color: var(--primary-color);
            pointer-events: none;
            transition: var(--transition);
        }

        .validation-icon {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%) scale(0.8);
            font-size: 1.5rem;
            opacity: 0;
            pointer-events: none;
            transition: var(--transition);
            color: var(--text-muted);
        }

        .validation-icon.is-visible {
            opacity: 1;
            transform: translateY(-50%) scale(1);
        }

        .form-group.is-valid .form-input {
            border-color: var(--success-color);
            background: rgba(40, 167, 69, 0.03);
        }

        .form-group.is-invalid .form-input {
            border-color: var(--error-color);
            background: rgba(220, 53, 69, 0.03);
            animation: shake 0.4s;
        }

        @@keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-8px); }
            75% { transform: translateX(8px); }
        }

        .form-feedback {
            min-height: 1.5rem;
            padding: 0.375rem 0.75rem;
            font-size: 0.875rem;
            color: var(--error-color);
            opacity: 0;
            transform: translateY(-5px);
            transition: var(--transition);
        }

        .form-group.is-invalid .form-feedback {
            opacity: 1;
            transform: translateY(0);
        }

        .btn-submit {
            background: linear-gradient(135deg, var(--primary-color) 0%, #f0c896 100%);
            border: none;
            color: #1a0f08;
            font-weight: 700;
            font-size: 1.1rem;
            padding: 1rem 2rem;
            border-radius: 12px;
            box-shadow: 0 4px 16px rgba(212, 165, 116, 0.4);
            transition: var(--transition);
            position: relative;
            overflow: hidden;
        }

        .btn-submit::before {
            content: "";
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.5);
            transform: translate(-50%, -50%);
            transition: width 0.6s, height 0.6s;
        }

        .btn-submit:hover:not(:disabled)::before {
            width: 400px;
            height: 400px;
        }

        .btn-submit:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(212, 165, 116, 0.5);
        }

        .btn-submit:active:not(:disabled) {
            transform: translateY(0);
        }

        .btn-submit:disabled {
            opacity: 0.7;
            cursor: not-allowed;
        }

        .btn-text,
        .btn-loading {
            position: relative;
            z-index: 1;
        }

        .btn-loading {
            display: none;
        }

        .btn-submit.loading .btn-text {
            display: none;
        }

        .btn-submit.loading .btn-loading {
            display: inline-block;
        }

        .order-summary {
            top: 2rem;
        }

        .order-items {
            max-height: 400px;
            overflow-y: auto;
            padding-right: 0.5rem;
        }

        .order-items::-webkit-scrollbar {
            width: 6px;
        }

        .order-items::-webkit-scrollbar-track {
            background: var(--bg-light);
            border-radius: 10px;
        }

        .order-items::-webkit-scrollbar-thumb {
            background: var(--primary-color);
            border-radius: 10px;
        }

        .order-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem;
            border-radius: 12px;
            margin-bottom: 0.75rem;
            background: var(--bg-light);
            transition: var(--transition);
        }

        .order-item:hover {
            background: rgba(212, 165, 116, 0.1);
            transform: translateX(4px);
        }

        .item-image {
            flex-shrink: 0;
            width: 60px;
            height: 60px;
            border-radius: 10px;
            overflow: hidden;
            border: 2px solid var(--border-color);
        }

        .item-image img {
            width: 100% !important;
            height: 100% !important;
            display: block !important;
            object-fit: cover !important;
            visibility: visible !important;
            opacity: 1 !important;
            background-color: #f5f0e8;
        }

        .item-details {
            flex-grow: 1;
        }

        .item-name {
            font-weight: 600;
            color: var(--text-dark);
            margin-bottom: 0.25rem;
            font-size: 0.95rem;
        }

        .item-quantity {
            font-size: 0.875rem;
            color: var(--text-muted);
            margin: 0;
        }

        .item-quantity span {
            font-weight: 600;
            color: var(--primary-color);
        }

        .item-price {
            font-weight: 700;
            color: var(--text-dark);
            font-size: 1rem;
        }

        .order-divider {
            height: 2px;
            background: linear-gradient(90deg, transparent, var(--border-color), transparent);
            margin: 1.5rem 0;
        }

        .order-total {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem;
            background: linear-gradient(135deg, rgba(212, 165, 116, 0.12) 0%, rgba(212, 165, 116, 0.05) 100%);
            border-radius: 12px;
        }

        .total-label {
            font-weight: 600;
            color: var(--text-dark);
            font-size: 1.1rem;
        }

        .total-amount {
            font-weight: 700;
            color: var(--primary-color);
            font-size: 1.5rem;
        }

        .security-badge {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0.75rem;
            background: rgba(40, 167, 69, 0.1);
            border: 1px solid rgba(40, 167, 69, 0.3);
            border-radius: 10px;
            color: var(--success-color);
            font-size: 0.875rem;
            font-weight: 500;
        }

        .security-badge i {
            font-size: 1.25rem;
        }

        @@media (max-width: 991.98px) {
            .order-summary {
                position: static !important;
            }

            .checkout-section {
                padding: 2rem 0;
            }
        }

        @@media (max-width: 575.98px) {
            .checkout-card .card-body {
                padding: 1.5rem !important;
            }

            .form-input {
                font-size: 16px;
            }

            .total-amount {
                font-size: 1.25rem;
            }
        }
    </style>
}

@section Scripts {
    <script>
        (function () {
            'use strict';

            const form = document.getElementById('checkoutForm');
            if (!form) {
                return;
            }

            const submitBtn = document.getElementById('submitBtn');

            const validationRules = {
                required: (value) => value.trim() !== '' || 'Trường này không được để trống',
                name: (value) => {
                    const trimmed = value.trim();
                    if (trimmed.length < 2) return 'Họ tên phải có ít nhất 2 ký tự';
                    if (trimmed.length > 50) return 'Họ tên không được vượt quá 50 ký tự';
                    // Hỗ trợ chữ cái Latin + tiếng Việt có dấu và khoảng trắng
                    const nameRegex = /^[a-zA-ZÀ-ỹ\\s]+$/;
                    if (!nameRegex.test(trimmed)) return 'Họ tên chỉ được chứa chữ cái';
                    return true;
                },
                phone: (value) => {
                    // Luôn validate trên chuỗi số tinh khiết
                    const digits = value.replace(/\\D/g, '');
                    if (digits.length !== 10) return 'Số điện thoại phải có 10 chữ số';
                    if (digits[0] !== '0') return 'Số điện thoại phải bắt đầu bằng số 0';
                    if (digits[1] === '0') return 'Số thứ 2 phải khác 0';
                    return true;
                },
                email: (value) => {
                    const trimmed = value.trim();
                    if (!trimmed) return true;
                    const atSymbol = String.fromCharCode(64);
                    const emailPattern = `^[^\\s${atSymbol}]+${atSymbol}[^\\s${atSymbol}]+\\.[^\\s${atSymbol}]+$`;
                    const emailRegex = new RegExp(emailPattern);
                    if (!emailRegex.test(trimmed)) return 'Email không đúng định dạng';

                    if (/[àáảãạăắằẳẵặâấầẩẫậèéẻẽẹêếềểễệìíỉĩịòóỏõọôốồổỗộơớờởỡợùúủũụưứừửữựỳýỷỹỵđ]/i.test(trimmed)) {
                        return 'Email không được chứa ký tự có dấu';
                    }
                    return true;
                },
                address: (value) => {
                    const trimmed = value.trim();
                    if (trimmed.length < 5) return 'Địa chỉ phải có ít nhất 5 ký tự';
                    if (trimmed.length > 255) return 'Địa chỉ không được vượt quá 255 ký tự';
                    return true;
                }
            };

            class FieldValidator {
                constructor(input) {
                    this.input = input;
                    this.formGroup = input.closest('.form-group');
                    this.feedback = this.formGroup?.querySelector('.form-feedback');
                    this.rules = (input.dataset.validate || '').split('|').filter(Boolean);
                    this.isRequired = this.rules.includes('required');
            this.icon = this.formGroup?.querySelector('.validation-icon');
                    this.init();
                }

                init() {
                    if (this.input.id === 'phoneNumber') {
                        // Không chặn keypress để tránh xung đột IME/bàn phím; làm sạch ở sự kiện input
                        this.input.addEventListener('input', () => {
                            // Cho phép nhập, sau đó làm sạch
                            this.input.value = this.input.value.replace(/\\D/g, '').slice(0, 10);
                        });

                        this.input.addEventListener('paste', (e) => {
                            e.preventDefault();
                            const text = (e.clipboardData || window.clipboardData).getData('text') || '';
                            this.input.value = text.replace(/\\D/g, '').slice(0, 10);
                        });
                    }

                    this.input.addEventListener('blur', () => this.validate(true));
                    this.input.addEventListener('input', () => this.clearValidation());
                }

                validate(showFeedback = false) {
                    const value = this.input.value;

                    if (!this.isRequired && !value.trim()) {
                        this.clearValidation();
                        return true;
                    }

                    for (const rule of this.rules) {
                        const validator = validationRules[rule];
                        if (!validator) continue;

                        const result = validator(value);
                        if (result !== true) {
                            if (showFeedback) this.showError(result);
                            return false;
                        }
                    }

                    if (showFeedback && value.trim()) {
                        this.showSuccess();
                    }
                    return true;
                }

                showError(message) {
                    if (!this.formGroup || !this.feedback) return;

                    this.formGroup.classList.remove('is-valid');
                    this.formGroup.classList.add('is-invalid');
                if (this.feedback) {
                    this.feedback.innerHTML = `<i class="bx bx-error-circle me-1"></i>${message}`;
                }
                if (this.icon) {
                    this.icon.classList.remove('bx-check-circle');
                    this.icon.classList.add('bx', 'bx-error-circle', 'is-visible');
                    this.icon.style.color = getComputedStyle(document.documentElement).getPropertyValue('--error-color').trim() || '#dc3545';
                }
                }

                showSuccess() {
                    if (!this.formGroup || !this.feedback) return;

                    this.formGroup.classList.remove('is-invalid');
                    this.formGroup.classList.add('is-valid');
                this.feedback.textContent = '';
                if (this.icon) {
                    this.icon.classList.remove('bx-error-circle');
                    this.icon.classList.add('bx', 'bx-check-circle', 'is-visible');
                    this.icon.style.color = getComputedStyle(document.documentElement).getPropertyValue('--success-color').trim() || '#28a745';
                }
                }

                clearValidation() {
                    if (!this.formGroup || !this.feedback) return;

                    this.formGroup.classList.remove('is-invalid', 'is-valid');
                    this.feedback.textContent = '';
                if (this.icon) {
                    this.icon.classList.remove('bx-error-circle', 'bx-check-circle', 'is-visible');
                }
                }
            }

            const validators = Array.from(form.querySelectorAll('[data-validate]'))
                .map((input) => new FieldValidator(input));

            form.addEventListener('submit', (e) => {
                let isValid = true;
                let firstInvalid = null;

                validators.forEach((validator) => {
                    if (!validator.validate(true)) {
                        isValid = false;
                        if (!firstInvalid) {
                            firstInvalid = validator.input;
                        }
                    }
                });

                if (!isValid) {
                    e.preventDefault();
                    firstInvalid?.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    setTimeout(() => firstInvalid?.focus(), 400);
                    return;
                }

                // Only prevent default if we're going to handle submission manually
                // Otherwise, let the form submit naturally
                submitBtn?.classList.add('loading');
                if (submitBtn) {
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = '<i class="bx bx-loader-alt bx-spin me-2"></i>Đang xử lý...';
                }
            });
        })();
    </script>
}

