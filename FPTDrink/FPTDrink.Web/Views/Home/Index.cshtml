@section Styles {
    <style>
        /* Hero Banner */
        .hero-banner {
            margin-top: -1rem;
        }
        
        .hero-banner .carousel-caption {
            padding: 2rem;
        }
        
        .hero-banner .carousel-caption .bg-dark {
            backdrop-filter: blur(8px);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        /* Section Headers */
        .section-header {
            border-bottom: 3px solid #0d6efd;
            padding-bottom: 1rem;
        }
        
        .section-header h2 {
            color: #212529;
            font-size: 1.75rem;
        }
        
        /* Product Cards */
        .product-card-home {
            transition: all 0.3s ease;
            border-radius: 12px !important;
        }
        
        .product-card-home:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 32px rgba(0, 0, 0, 0.15) !important;
        }
        
        .product-card-home .card-img-top {
            border-radius: 12px 12px 0 0;
            transition: transform 0.3s ease;
        }
        
        .product-card-home:hover .card-img-top {
            transform: scale(1.08);
        }
        
        .product-card-home .badge {
            font-size: 0.85rem;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(220, 53, 69, 0.4);
        }
        
        .product-card-home .card-title {
            color: #212529;
            font-size: 1rem;
            line-height: 1.4;
        }
        
        .product-card-home .btn {
            border-radius: 8px;
            transition: all 0.3s ease;
        }
        
        .product-card-home .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(13, 110, 253, 0.3);
        }
        
        /* Section Backgrounds */
        .featured-section {
            background: #ffffff;
        }
        
        .newest-section {
            background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
        }
        
        .bestseller-section {
            background: #ffffff;
        }
        
        /* Responsive */
        @@media (max-width: 768px) {
            .hero-banner {
                margin-top: 0;
            }
            
            .hero-banner .carousel-caption h1 {
                font-size: 1.5rem !important;
            }
            
            .hero-banner .carousel-caption .lead {
                font-size: 0.9rem !important;
            }
            
            .section-header h2 {
                font-size: 1.5rem;
            }
            
            .product-card-home .card-img-top {
                height: 160px !important;
            }
        }
        
        .object-fit-cover { 
            object-fit: cover; 
        }
        
        .text-truncate-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>
}
