@model FPTDrink.Web.ViewModels.HomeBlocksViewModel
@{
    ViewData["Title"] = "Trang chủ";
}

<!-- ========== BODY: HERO BANNER ========== -->
<section class="hero-banner mb-5">
    <div class="position-relative rounded-4 overflow-hidden shadow-lg" style="height: 450px;">
        <div id="homeCarousel" class="carousel slide carousel-fade h-100" data-bs-ride="carousel" data-bs-interval="5000">
            <div class="carousel-inner h-100">
                <div class="carousel-item active h-100">
                    <img src="~/images/mot.jpg" class="d-block w-100 h-100" alt="Banner FPTDrink" style="object-fit: cover;" loading="eager" />
                    <div class="carousel-caption d-flex flex-column justify-content-center h-100 text-start px-4">
                        <div class="bg-dark bg-opacity-80 p-4 p-md-5 rounded-4" style="max-width: 600px;">
                            <h1 class="display-4 fw-bold mb-3">Thức uống ngon, giao nhanh!</h1>
                            <p class="lead mb-4 fs-5">Khám phá các sản phẩm nổi bật, ưu đãi và mới nhất hôm nay.</p>
                            <a class="btn btn-light btn-lg px-4 py-3 fw-semibold" asp-controller="Menu" asp-action="Index">
                                <i class="bx bx-shopping-bag me-2"></i>Mua ngay
                            </a>
                        </div>
                    </div>
                </div>
                <div class="carousel-item h-100">
                    <img src="~/images/hai.jpg" class="d-block w-100 h-100" alt="Banner FPTDrink 2" style="object-fit: cover;" loading="lazy" />
                    <div class="carousel-caption d-flex flex-column justify-content-center h-100 text-start px-4">
                        <div class="bg-dark bg-opacity-80 p-4 p-md-5 rounded-4" style="max-width: 600px;">
                            <h1 class="display-4 fw-bold mb-3">Combo ưu đãi đặc biệt</h1>
                            <p class="lead mb-4 fs-5">Tiết kiệm đến 30% với các combo hấp dẫn dành cho sinh viên FPT.</p>
                            <a class="btn btn-light btn-lg px-4 py-3 fw-semibold" asp-controller="Menu" asp-action="Index">
                                <i class="bx bx-food-menu me-2"></i>Xem thực đơn
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#homeCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#homeCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</section>

<!-- ========== BODY: FEATURED PRODUCTS ========== -->
<section class="featured-section py-5">
    <div class="section-header mb-4">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <h2 class="h3 fw-bold mb-0">
                <i class="bx bx-star me-2"></i>Nổi bật
            </h2>
            <a class="btn btn-outline-primary btn-sm" asp-controller="Products" asp-action="Index">
                Xem tất cả <i class="bx bx-chevron-right ms-1"></i>
            </a>
        </div>
        <p class="mb-0">Các sản phẩm được yêu thích nhất</p>
    </div>
    <div class="row g-4">
        @foreach (var p in Model.Featured.Take(8))
        {
            <div class="col-6 col-md-3">
                <div class="product-card-home card h-100 shadow-sm position-relative overflow-hidden border-0">
                    @if (p.HasDiscount)
                    {
                        <span class="badge bg-danger position-absolute top-0 start-0 m-2 px-3 py-2 fw-bold" style="z-index: 10;">-@p.DiscountPercent%</span>
                    }
                    <a asp-controller="Products" asp-action="Detail" asp-route-id="@p.Id" class="text-decoration-none">
                        <img class="card-img-top object-fit-cover" style="height:200px" 
                             src="@(string.IsNullOrWhiteSpace(p.Image) ? Url.Content("~/images/placeholder.png") : p.Image)" 
                             alt="@p.Title"
                             loading="lazy"
                             width="300"
                             height="200" />
                    </a>
                    <div class="card-body d-flex flex-column p-3">
                        <h3 class="h6 card-title fw-semibold mb-2 text-truncate-2" style="min-height: 2.5rem;">@p.Title</h3>
                        <div class="mt-auto">
                            @if (p.HasDiscount)
                            {
                                <div class="mb-2">
                                    <span class="text-danger fw-bold fs-5">@string.Format("{0:N0} ₫", p.GiaHienThi)</span>
                                    <small class="text-muted text-decoration-line-through ms-2">@string.Format("{0:N0} ₫", p.OriginalPrice)</small>
                                </div>
                            }
                            else
                            {
                                <div class="fw-bold fs-5 text-primary mb-2">@string.Format("{0:N0} ₫", p.GiaHienThi)</div>
                            }
                            <a class="btn btn-primary w-100 fw-semibold" asp-controller="Products" asp-action="Detail" asp-route-id="@p.Id">
                                <i class="bx bx-show me-1"></i>Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

