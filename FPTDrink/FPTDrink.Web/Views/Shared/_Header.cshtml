<!-- ========== HEADER ========== -->
<header class="bg-white shadow-sm">
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center py-2" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/images/logocf.png" alt="FPTDrink Logo" height="45" class="me-2" />
                <span class="fw-bold text-primary fs-4 d-none d-md-inline">FPTDrink</span>
            </a>
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-lg-flex justify-content-between align-items-center">
                <ul class="navbar-nav align-items-lg-center gap-3 mb-3 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link fw-medium px-3" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="bx bx-home me-1"></i>Trang chủ
                        </a>
                    </li>
                    @await Component.InvokeAsync("CategoriesMenu")
                    <li class="nav-item">
                        <a class="nav-link fw-medium px-3" asp-area="" asp-controller="Products" asp-action="Index">
                            <i class="bx bx-package me-1"></i>Sản phẩm
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-medium px-3" asp-area="" asp-controller="Menu" asp-action="Index">
                            <i class="bx bx-food-menu me-1"></i>Thực đơn
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-medium px-3 position-relative" asp-area="" asp-controller="ShoppingCart" asp-action="Index">
                            <i class="bx bx-cart me-1"></i>Giỏ hàng
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-medium px-3" asp-area="" asp-controller="Contact" asp-action="Index">
                            <i class="bx bx-phone me-1"></i>Liên hệ
                        </a>
                    </li>
                </ul>
                <form class="d-flex mb-3 mb-lg-0" method="get" asp-controller="Products" asp-action="Index">
                    <div class="input-group" style="max-width: 300px;">
                        <span class="input-group-text bg-white border-end-0"><i class="bx bx-search"></i></span>
                        <input class="form-control border-start-0" type="search" name="q" placeholder="Tìm đồ uống..." aria-label="Search">
                        <button class="btn btn-primary" type="submit">Tìm</button>
                    </div>
                </form>
            </div>
        </div>
    </nav>
</header>

