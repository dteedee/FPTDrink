@{
    ViewData["Title"] = "Liên hệ";
    ViewData["FullWidthLayout"] = true;
}

@section Styles {
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <style>
        .contact-hero {
            background: linear-gradient(135deg, #2d1b0e 0%, #1a0f08 50%, #0f0804 100%);
            color: #e8ddd0;
            margin-bottom: 60px;
            position: relative;
            overflow: hidden;
        }

        .contact-hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                radial-gradient(circle at 20% 30%, rgba(212, 165, 116, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 80% 70%, rgba(139, 90, 43, 0.1) 0%, transparent 50%);
            pointer-events: none;
        }

        .contact-hero .container {
            position: relative;
            z-index: 1;
        }

        .hero-breadcrumb {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 20px;
            font-size: 0.9rem;
        }

        .hero-breadcrumb a {
            color: rgba(232, 221, 208, 0.9);
            text-decoration: none;
            transition: color 0.3s;
        }

        .hero-breadcrumb a:hover {
            color: #f0c896;
        }

        .hero-breadcrumb span {
            color: rgba(232, 221, 208, 0.7);
        }

        .contact-hero h1 {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 20px;
            color: #f0c896;
            text-shadow: 0 4px 12px rgba(0, 0, 0, 0.5);
        }

        .contact-hero p {
            font-size: 1.1rem;
            color: #e8ddd0;
            max-width: 700px;
            text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
        }

        .contact-section {
            margin-bottom: 60px;
        }

        .contact-card {
            background: linear-gradient(135deg, #faf8f5 0%, #f5f0e8 100%);
            border-radius: 16px;
            padding: 40px;
            box-shadow: 0 8px 32px rgba(139, 90, 43, 0.15);
            border: 2px solid rgba(212, 165, 116, 0.25);
            transition: all 0.3s ease;
            height: 100%;
        }

        .contact-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(212, 165, 116, 0.25);
            border-color: rgba(212, 165, 116, 0.4);
        }

        .contact-card h2 {
            color: #2d1b0e;
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 30px;
            padding-bottom: 15px;
            border-bottom: 3px solid transparent;
            border-image: linear-gradient(90deg, #d4a574 0%, #f0c896 100%) 1;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .contact-card h2 i {
            color: #d4a574;
            font-size: 1.5rem;
        }

        .contact-card .form-control, 
        .contact-card .form-select,
        .subscribe-section .form-control {
            border-radius: 10px;
            border: 2px solid rgba(212, 165, 116, 0.3);
            padding: 12px 15px;
            background: #ffffff;
            color: #2d1b0e;
            transition: all 0.3s;
        }

        .contact-card .form-control:focus, 
        .contact-card .form-select:focus,
        .subscribe-section .form-control:focus {
            border-color: #d4a574;
            box-shadow: 0 0 0 0.2rem rgba(212, 165, 116, 0.25);
            background: #ffffff;
        }

        .contact-card .btn-primary,
        .subscribe-section .btn {
            background: linear-gradient(135deg, #d4a574 0%, #f0c896 100%);
            border: none;
            border-radius: 10px;
            padding: 12px 40px;
            font-weight: 700;
            color: #1a0f08;
            transition: all 0.3s;
            box-shadow: 0 4px 12px rgba(212, 165, 116, 0.4);
        }

        .contact-card .btn-primary:hover,
        .subscribe-section .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(212, 165, 116, 0.5);
            background: linear-gradient(135deg, #f0c896 0%, #d4a574 100%);
        }

        .contact-info-item {
            display: flex;
            align-items: flex-start;
            gap: 20px;
            margin-bottom: 30px;
            padding-bottom: 25px;
            border-bottom: 1px solid rgba(212, 165, 116, 0.2);
        }

        .contact-info-item:last-child {
            border-bottom: none;
        }

        .contact-info-item i {
            font-size: 2rem;
            color: #d4a574;
            min-width: 40px;
            text-align: center;
            filter: drop-shadow(0 2px 4px rgba(212, 165, 116, 0.3));
        }

        .contact-info-content .label {
            display: block;
            font-weight: 700;
            color: #2d1b0e;
            margin-bottom: 8px;
            font-size: 1rem;
        }

        .contact-info-content .address {
            color: #6b5d4f;
            line-height: 1.6;
        }

        .divider {
            height: 2px;
            background: linear-gradient(90deg, transparent, rgba(212, 165, 116, 0.3), transparent);
            margin: 30px 0;
        }

        .social-links {
            display: flex;
            gap: 15px;
            margin-top: 20px;
        }

        .social-links a {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #d4a574 0%, #f0c896 100%);
            color: #1a0f08;
            font-size: 1.3rem;
            text-decoration: none;
            transition: all 0.3s;
            box-shadow: 0 4px 12px rgba(212, 165, 116, 0.3);
        }

        .social-links a:hover {
            transform: translateY(-3px) scale(1.1);
            box-shadow: 0 6px 20px rgba(212, 165, 116, 0.5);
            background: linear-gradient(135deg, #f0c896 0%, #d4a574 100%);
        }

        .map-container {
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 8px 32px rgba(139, 90, 43, 0.15);
            border: 2px solid rgba(212, 165, 116, 0.25);
            margin-bottom: 60px;
        }

        .map-container iframe {
            width: 100%;
            height: 450px;
            border: 0;
        }

        .subscribe-section {
            background: linear-gradient(135deg, #2d1b0e 0%, #1a0f08 50%, #0f0804 100%);
            border-radius: 16px;
            padding: 60px 40px;
            color: #e8ddd0;
            margin-bottom: 60px;
            position: relative;
            overflow: hidden;
            border: 2px solid rgba(212, 165, 116, 0.3);
        }

        .subscribe-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                radial-gradient(circle at 30% 50%, rgba(212, 165, 116, 0.1) 0%, transparent 60%),
                radial-gradient(circle at 70% 50%, rgba(139, 90, 43, 0.1) 0%, transparent 60%);
            pointer-events: none;
        }

        .subscribe-section .container {
            position: relative;
            z-index: 1;
        }

        .subscribe-section h3 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 15px;
            color: #f0c896;
            text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
        }

        .subscribe-section p {
            font-size: 1.1rem;
            color: #e8ddd0;
            margin-bottom: 30px;
        }

        .subscribe-form {
            display: flex;
            gap: 15px;
            max-width: 600px;
            margin: 0 auto;
        }

        .subscribe-form .form-control {
            flex: 1;
            border-radius: 50px;
            border: 2px solid rgba(212, 165, 116, 0.3);
            padding: 15px 25px;
            font-size: 1rem;
            background: rgba(255, 255, 255, 0.1);
            color: #e8ddd0;
            backdrop-filter: blur(10px);
        }

        .subscribe-form .form-control::placeholder {
            color: rgba(232, 221, 208, 0.7);
        }

        .subscribe-form .form-control:focus {
            background: rgba(255, 255, 255, 0.15);
            border-color: #d4a574;
            color: #e8ddd0;
            box-shadow: 0 0 0 0.2rem rgba(212, 165, 116, 0.25);
        }

        .subscribe-form button {
            border-radius: 50px;
            padding: 15px 40px;
            border: none;
            background: linear-gradient(135deg, #d4a574 0%, #f0c896 100%);
            color: #1a0f08;
            font-weight: 700;
            transition: all 0.3s;
            box-shadow: 0 4px 12px rgba(212, 165, 116, 0.4);
        }

        .subscribe-form button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(212, 165, 116, 0.5);
            background: linear-gradient(135deg, #f0c896 0%, #d4a574 100%);
        }

        .alert {
            border-radius: 12px;
            border: none;
            box-shadow: 0 4px 16px rgba(139, 90, 43, 0.15);
        }

        .alert-success {
            background: linear-gradient(135deg, rgba(40, 167, 69, 0.1) 0%, rgba(25, 135, 84, 0.05) 100%);
            color: #155724;
            border-left: 4px solid #28a745;
        }

        .alert-danger {
            background: linear-gradient(135deg, rgba(220, 53, 69, 0.1) 0%, rgba(220, 53, 69, 0.05) 100%);
            color: #721c24;
            border-left: 4px solid #dc3545;
        }

        @@media (max-width: 768px) {
            .contact-hero {
                padding: 60px 0 40px;
            }

            .contact-hero h1 {
                font-size: 2rem;
            }

            .contact-card {
                padding: 25px;
                margin-bottom: 30px;
            }

            .subscribe-section {
                padding: 40px 20px;
            }

            .subscribe-form {
                flex-direction: column;
            }

            .subscribe-form input,
            .subscribe-form button {
                width: 100%;
            }
        }
    </style>
}

<!-- Hero Section - Full Width -->
<section class="contact-hero">
    <div class="container">
        <nav aria-label="breadcrumb" class="hero-breadcrumb">
            <a asp-controller="Home" asp-action="Index">Trang chủ</a>
            <i class="bx bx-chevron-right" aria-hidden="true"></i>
            <span>Liên hệ</span>
        </nav>
        <h1><i class="bx bx-envelope"></i>Liên hệ với chúng tôi</h1>
        <p>Chúng tôi luôn sẵn sàng hỗ trợ bạn. Hãy gửi yêu cầu hoặc ghé thăm cơ sở của chúng tôi tại Hoà Lạc.</p>
    </div>
</section>

<!-- Main Content -->
<div class="container-fluid px-0">
    <div class="container">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bx bx-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["SubscribeSuccess"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bx bx-check-circle me-2"></i>@TempData["SubscribeSuccess"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["SubscribeError"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bx bx-error-circle me-2"></i>@TempData["SubscribeError"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Contact Forms Section -->
    <div class="row g-4 contact-section">
        <!-- Send Message Form -->
        <div class="col-lg-6">
            <div class="contact-card">
                <h2><i class="bx bx-message-dots"></i>Gửi tin nhắn</h2>
                <form asp-action="SendMessage" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <input type="text" class="form-control" name="HoTen" placeholder="Họ và tên" required>
                    </div>
                    <div class="mb-3">
                        <input type="email" class="form-control" name="Email" placeholder="Email" required>
                    </div>
                    <div class="mb-4">
                        <textarea class="form-control" name="LoiNhan" rows="6" placeholder="Lời nhắn" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bx bx-send me-2"></i>Gửi tin nhắn
                    </button>
                </form>
            </div>
        </div>

        <!-- Contact Information -->
        <div class="col-lg-6">
            <div class="contact-card">
                <h2><i class="bx bx-info-circle"></i>Thông tin liên hệ</h2>
                <p class="text-muted mb-4" style="color: #6b5d4f !important;">
                    Bất kỳ khi nào bạn cần, đừng ngần ngại liên hệ với chúng tôi qua email, điện thoại hoặc biểu mẫu liên hệ trên trang web của chúng tôi.
                </p>

                <div class="contact-info-item">
                    <i class="bx bx-location-plus"></i>
                    <div class="contact-info-content">
                        <span class="label">Địa chỉ</span>
                        <span class="address">Đại học FPT University, Hoà Lạc, Hà Nội, Việt Nam</span>
                    </div>
                </div>

                <div class="contact-info-item">
                    <i class="bx bx-envelope"></i>
                    <div class="contact-info-content">
                        <span class="label">Email</span>
                        <span class="address">fptdrink@fpt.edu.vn</span>
                    </div>
                </div>

                <div class="contact-info-item">
                    <i class="bx bx-phone-call"></i>
                    <div class="contact-info-content">
                        <span class="label">Số điện thoại</span>
                        <span class="address">0969 995 633</span>
                    </div>
                </div>

                <div class="divider"></div>

                <div>
                    <span class="label mb-3 d-block">Theo dõi chúng tôi</span>
                    <div class="social-links">
                        <a href="#" title="Facebook"><i class="bx bxl-facebook-circle"></i></a>
                        <a href="#" title="Instagram"><i class="bx bxl-instagram-alt"></i></a>
                        <a href="#" title="Twitter"><i class="bx bxl-twitter"></i></a>
                        <a href="#" title="YouTube"><i class="bx bxl-youtube"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    </div>

    <!-- Google Maps - Full Width -->
    <div class="map-container">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3723.606030690079!2d105.522728!3d21.0124167!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135abc60e7d3f19%3A0x2be9d7d0b5abcbf4!2zVHLGsOG7nW5nIMSQw6BpIGjhu41jIEZQVCBIw6AgTuG7mWk!5e0!3m2!1svi!2s!4v1731240000000!5m2!1svi!2s"
                allowfullscreen="" loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                title="Trường Đại học FPT Hà Nội - Khu CNC Hoà Lạc"></iframe>
    </div>

    <!-- Subscribe Section -->
    <div class="container">
        <div class="subscribe-section text-center">
            <div class="container">
                <h3><i class="bx bx-gift"></i>Khách hàng mới</h3>
            <p>Đăng ký ngay để nhận voucher giảm giá lên đến 30%</p>
                <form asp-action="Subscribe" method="post" class="subscribe-form">
                @Html.AntiForgeryToken()
                <input type="email" name="email" class="form-control" placeholder="Nhập email của bạn" required>
                <button type="submit" class="btn">Đăng ký</button>
            </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Smooth scroll animation
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });
    </script>
}
