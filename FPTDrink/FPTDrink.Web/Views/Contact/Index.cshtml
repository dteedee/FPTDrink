@{
    ViewData["Title"] = "Liên hệ";
    ViewData["FullWidthLayout"] = true;
}

@section Styles {
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css"
          integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        .contact-hero {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 80px 0 60px;
            margin-bottom: 60px;
            position: relative;
            overflow: hidden;
        }

        .contact-hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><defs><pattern id="grid" width="100" height="100" patternUnits="userSpaceOnUse"><path d="M 100 0 L 0 0 0 100" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1"/></pattern></defs><rect width="100%" height="100%" fill="url(%23grid)"/></svg>');
            opacity: 0.3;
        }

        .contact-hero .container {
            position: relative;
            z-index: 1;
        }

        .hero-breadcrumb {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 20px;
            font-size: 0.9rem;
        }

        .hero-breadcrumb a {
            color: rgba(255, 255, 255, 0.9);
            text-decoration: none;
            transition: color 0.3s;
        }

        .hero-breadcrumb a:hover {
            color: white;
        }

        .hero-breadcrumb span {
            color: rgba(255, 255, 255, 0.7);
        }

        .contact-hero h1 {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 20px;
            color: #1891c8;
        }

        .contact-hero p {
            font-size: 1.1rem;
            opacity: 0.95;
            max-width: 700px;
        }

        .contact-section {
            margin-bottom: 60px;
        }

        .contact-card {
            background: white;
            border-radius: 15px;
            padding: 40px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
            transition: transform 0.3s, box-shadow 0.3s;
            height: 100%;
        }

        .contact-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.12);
        }

        .contact-card h2 {
            color: #1891c8;
            font-size: 1.8rem;
            font-weight: 600;
            margin-bottom: 30px;
            padding-bottom: 15px;
            border-bottom: 3px solid #1891c8;
        }

        .form-control, .form-select {
            border-radius: 10px;
            border: 2px solid #e9ecef;
            padding: 12px 15px;
            transition: all 0.3s;
        }

        .form-control:focus, .form-select:focus {
            border-color: #1891c8;
            box-shadow: 0 0 0 0.2rem rgba(24, 145, 200, 0.25);
        }

        .btn-primary {
            background: linear-gradient(135deg, #1891c8 0%, #0d6efd 100%);
            border: none;
            border-radius: 10px;
            padding: 12px 40px;
            font-weight: 600;
            transition: all 0.3s;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(24, 145, 200, 0.4);
        }

        .contact-info-item {
            display: flex;
            align-items: flex-start;
            gap: 20px;
            margin-bottom: 30px;
            padding-bottom: 25px;
            border-bottom: 1px solid #e9ecef;
        }

        .contact-info-item:last-child {
            border-bottom: none;
        }

        .contact-info-item i {
            font-size: 2rem;
            color: #1891c8;
            min-width: 40px;
            text-align: center;
        }

        .contact-info-content .label {
            display: block;
            font-weight: 600;
            color: #333;
            margin-bottom: 8px;
            font-size: 1rem;
        }

        .contact-info-content .address {
            color: #666;
            line-height: 1.6;
        }

        .divider {
            height: 2px;
            background: linear-gradient(90deg, transparent, #e9ecef, transparent);
            margin: 30px 0;
        }

        .social-links {
            display: flex;
            gap: 15px;
            margin-top: 20px;
        }

        .social-links a {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #1891c8 0%, #0d6efd 100%);
            color: white;
            font-size: 1.3rem;
            text-decoration: none;
            transition: all 0.3s;
        }

        .social-links a:hover {
            transform: translateY(-3px) scale(1.1);
            box-shadow: 0 5px 15px rgba(24, 145, 200, 0.4);
        }

        .map-container {
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
            margin-bottom: 60px;
        }

        .map-container iframe {
            width: 100%;
            height: 450px;
            border: 0;
        }

        .subscribe-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 15px;
            padding: 50px 40px;
            color: white;
            margin-bottom: 60px;
        }

        .subscribe-section h3 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 15px;
        }

        .subscribe-section p {
            font-size: 1.1rem;
            opacity: 0.95;
            margin-bottom: 30px;
        }

        .subscribe-form {
            display: flex;
            gap: 15px;
            max-width: 600px;
        }

        .subscribe-form input {
            flex: 1;
            border-radius: 50px;
            border: none;
            padding: 15px 25px;
            font-size: 1rem;
        }

        .subscribe-form button {
            border-radius: 50px;
            padding: 15px 40px;
            border: none;
            background: white;
            color: #1891c8;
            font-weight: 600;
            transition: all 0.3s;
        }

        .subscribe-form button:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .alert {
            border-radius: 10px;
            border: none;
        }

        @@media (max-width: 768px) {
            .contact-hero h1 {
                font-size: 2rem;
            }

            .contact-card {
                padding: 25px;
                margin-bottom: 30px;
            }

            .subscribe-form {
                flex-direction: column;
            }

            .subscribe-form input,
            .subscribe-form button {
                width: 100%;
            }
        }
    </style>
}

<!-- Hero Section - Full Width -->
<section class="contact-hero">
    <div class="container">
        <nav aria-label="breadcrumb" class="hero-breadcrumb">
            <a asp-controller="Home" asp-action="Index">Trang chủ</a>
            <i class="fa fa-angle-right" aria-hidden="true"></i>
            <span>Liên hệ</span>
        </nav>
        <h1>Liên hệ với chúng tôi</h1>
        <p>Chúng tôi luôn sẵn sàng hỗ trợ bạn. Hãy gửi yêu cầu hoặc ghé thăm cơ sở của chúng tôi tại Hoà Lạc.</p>
    </div>
</section>

<!-- Main Content -->
<div class="container-fluid px-0">
    <div class="container">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["SubscribeSuccess"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SubscribeSuccess"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["SubscribeError"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["SubscribeError"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Contact Forms Section -->
    <div class="row g-4 contact-section">
        <!-- Send Message Form -->
        <div class="col-lg-6">
            <div class="contact-card">
                <h2>Gửi tin nhắn</h2>
                <form asp-action="SendMessage" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <input type="text" class="form-control" name="HoTen" placeholder="Họ và tên" required>
                    </div>
                    <div class="mb-3">
                        <input type="email" class="form-control" name="Email" placeholder="Email" required>
                    </div>
                    <div class="mb-4">
                        <textarea class="form-control" name="LoiNhan" rows="6" placeholder="Lời nhắn" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-paper-plane me-2"></i>Gửi tin nhắn
                    </button>
                </form>
            </div>
        </div>

        <!-- Contact Information -->
        <div class="col-lg-6">
            <div class="contact-card">
                <h2>Thông tin liên hệ</h2>
                <p class="text-muted mb-4">
                    Bất kỳ khi nào bạn cần, đừng ngần ngại liên hệ với chúng tôi qua email, điện thoại hoặc biểu mẫu liên hệ trên trang web của chúng tôi.
                </p>

                <div class="contact-info-item">
                    <i class="bx bx-location-plus"></i>
                    <div class="contact-info-content">
                        <span class="label">Địa chỉ</span>
                        <span class="address">Đại học FPT University, Hoà Lạc, Hà Nội, Việt Nam</span>
                    </div>
                </div>

                <div class="contact-info-item">
                    <i class="bx bx-envelope"></i>
                    <div class="contact-info-content">
                        <span class="label">Email</span>
                        <span class="address">fptdrink@fpt.edu.vn</span>
                    </div>
                </div>

                <div class="contact-info-item">
                    <i class="bx bx-phone-call"></i>
                    <div class="contact-info-content">
                        <span class="label">Số điện thoại</span>
                        <span class="address">0969 995 633</span>
                    </div>
                </div>

                <div class="divider"></div>

                <div>
                    <span class="label mb-3 d-block">Theo dõi chúng tôi</span>
                    <div class="social-links">
                        <a href="#" title="Facebook"><i class="bx bxl-facebook-circle"></i></a>
                        <a href="#" title="Instagram"><i class="bx bxl-instagram-alt"></i></a>
                        <a href="#" title="Twitter"><i class="bx bxl-twitter"></i></a>
                        <a href="#" title="YouTube"><i class="bx bxl-youtube"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    </div>

    <!-- Google Maps - Full Width -->
    <div class="map-container">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3723.606030690079!2d105.522728!3d21.0124167!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135abc60e7d3f19%3A0x2be9d7d0b5abcbf4!2zVHLGsOG7nW5nIMSQw6BpIGjhu41jIEZQVCBIw6AgTuG7mWk!5e0!3m2!1svi!2s!4v1731240000000!5m2!1svi!2s"
                allowfullscreen="" loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                title="Trường Đại học FPT Hà Nội - Khu CNC Hoà Lạc"></iframe>
    </div>

    <!-- Subscribe Section -->
    <div class="container">
        <div class="subscribe-section text-center">
            <h3>Khách hàng mới</h3>
            <p>Đăng ký ngay để nhận voucher giảm giá lên đến 30%</p>
            <form asp-action="Subscribe" method="post" class="subscribe-form mx-auto">
                @Html.AntiForgeryToken()
                <input type="email" name="email" class="form-control" placeholder="Nhập email của bạn" required>
                <button type="submit" class="btn">Đăng ký</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Smooth scroll animation
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });
    </script>
}

