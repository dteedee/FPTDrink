@model FPTDrink.Web.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<section class="customer-auth-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7">
                <div class="auth-card shadow-lg">
                    <div class="auth-header text-center mb-4">
                        <img src="~/images/logocf.png" alt="FPTDrink Logo" class="auth-logo mb-3" />
                        <h1 class="h3 fw-bold text-coffee">Quên mật khẩu</h1>
                        <p class="text-muted mb-0">Nhập email để nhận mã OTP đặt lại mật khẩu</p>
                    </div>

                    <form asp-action="ForgotPassword" method="post" novalidate class="auth-form">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bx bx-envelope"></i></span>
                                <input asp-for="Email" class="form-control" type="email" placeholder="Nhập email của bạn" autocomplete="email" />
                            </div>
                            <span class="text-danger small" asp-validation-for="Email"></span>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 py-2 mb-3" role="alert"></div>

                        <button type="submit" class="btn btn-coffee w-100 btn-lg mb-3">
                            <i class="bx bx-send me-2"></i>Gửi mã OTP
                        </button>

                        <div class="text-center">
                            <p class="mb-0 text-muted">
                                Nhớ mật khẩu? 
                                <a asp-action="Login" class="text-coffee fw-semibold text-decoration-none">Đăng nhập</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <style>
        .customer-auth-section {
            min-height: calc(100vh - 200px);
            background: linear-gradient(135deg, #f5f0e8 0%, #e8ddd0 100%);
        }

        .auth-card {
            background: white;
            border-radius: 16px;
            padding: 2.5rem;
            border: 1px solid rgba(212, 165, 116, 0.2);
        }

        .auth-logo {
            width: 80px;
            height: auto;
        }

        .auth-form .input-group-text {
            background-color: #f8f9fa;
            border-right: none;
            color: #6c757d;
        }

        .auth-form .form-control {
            border-left: none;
        }

        .auth-form .form-control:focus {
            border-color: #d4a574;
            box-shadow: 0 0 0 0.2rem rgba(212, 165, 116, 0.25);
        }
    </style>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

