@{
    ViewData["Title"] = "Không có quyền";
    var message = ViewData["Message"] as string ?? "Bạn không có quyền thực hiện chức năng này.";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bx bx-shield-x" style="font-size: 64px; color: #dc3545;"></i>
                    </div>
                    <h2 class="card-title mb-3">Không có quyền</h2>
                    <p class="card-text text-muted mb-4">@message</p>
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-coffee">
                        <i class="bx bx-home"></i> Về trang chủ
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


