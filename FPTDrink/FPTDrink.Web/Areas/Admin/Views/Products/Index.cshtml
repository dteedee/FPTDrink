@model IReadOnlyList<FPTDrink.Web.Areas.Admin.ViewModels.AdminProductListItemViewModel>
@{
    ViewData["Title"] = "Quản lý sản phẩm";
    var status = ViewBag.Status as string ?? "Index";
    var search = ViewBag.Search as string;
}

<div class="admin-page-header">
    <div class="admin-page-title">
        <h2>Quản lý sản phẩm</h2>
        <p>Theo dõi, cập nhật và đồng bộ thông tin sản phẩm trên toàn hệ thống.</p>
    </div>
    <div class="admin-page-actions">
        <a asp-action="Create" class="btn btn-coffee admin-pill-button">
            <i class="bx bx-plus"></i>Thêm sản phẩm
        </a>
    </div>
</div>

<div class="admin-subnav">
    <a asp-action="Index" asp-route-status="Index" class="@(status == "Index" ? "active" : "")"><i class="bx bx-show-alt me-1"></i>Đang bán</a>
    <a asp-action="Index" asp-route-status="All" class="@(status == "All" ? "active" : "")"><i class="bx bx-list-check me-1"></i>Tất cả</a>
    <a asp-action="Index" asp-route-status="Trash" class="@(status == "Trash" ? "active" : "")"><i class="bx bx-trash me-1"></i>Thùng rác</a>
</div>

<form method="get" class="admin-filter-bar row g-3">
    <div class="col-lg-3">
        <input type="hidden" name="status" value="@status" />
        <label class="form-label">Trạng thái hiển thị</label>
        <div class="form-control-plaintext fw-semibold">
            @(status switch { "All" => "Tất cả sản phẩm", "Trash" => "Trong thùng rác", _ => "Sản phẩm đang bán" })
        </div>
    </div>
    <div class="col-lg-6">
        <label class="form-label">Từ khoá tìm kiếm</label>
        <div class="input-group">
            <span class="input-group-text"><i class="bx bx-search"></i></span>
            <input type="text" name="search" class="form-control" placeholder="Tên sản phẩm, mã sản phẩm, nhà cung cấp..." value="@search" />
        </div>
    </div>
    <div class="col-lg-3 d-flex align-items-end gap-2">
        <button type="submit" class="btn btn-coffee admin-pill-button flex-grow-1">
            <i class="bx bx-search-alt"></i>Tìm kiếm
        </button>
        <a asp-action="Index" class="btn btn-coffee-outline admin-pill-button flex-shrink-0">
            <i class="bx bx-reset"></i>
        </a>
    </div>
</form>

<div class="admin-table-wrapper">
    <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th class="stt-column">STT</th>
                <th class="sortable-header sort-none">Sản phẩm</th>
                <th class="sortable-header sort-none">Danh mục</th>
                <th class="sortable-header sort-none">Nhà cung cấp</th>
                <th class="text-end sortable-header sort-none">Giá bán</th>
                <th class="text-end sortable-header sort-none">Giảm giá</th>
                <th class="text-center sortable-header sort-none">Tồn kho</th>
                <th class="text-center sortable-header sort-none">Trạng thái</th>
                <th class="text-end"></th>
            </tr>
        </thead>
        <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="9" class="text-center text-muted py-4">
                    Không tìm thấy sản phẩm nào phù hợp.
                </td>
            </tr>
        }
        else
        {
            var stt = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td class="stt-column">@(stt++)</td>
                    <td>
                        <div class="d-flex align-items-center gap-3">
                            <img src="@(string.IsNullOrWhiteSpace(item.Image) ? Url.Content("~/images/placeholder.png") : item.Image)"
                                 alt="@item.Name"
                                 class="rounded-3 object-fit-cover"
                                 style="width: 56px; height: 56px;" />
                            <div>
                                <div class="fw-semibold">@item.Name</div>
                                <small class="text-muted">@item.Id</small>
                            </div>
                        </div>
                    </td>
                    <td>@item.CategoryName</td>
                    <td>@item.SupplierName</td>
                    <td class="text-end">@item.SalePrice.ToString("N0") ₫</td>
                    <td class="text-end">@((item.DiscountPercent ?? 0).ToString("N0"))%</td>
                    <td class="text-center">
                        <span class="status-badge @(item.Stock > 10 ? "success" : item.Stock > 0 ? "warning" : "danger")">
                            @item.Stock
                        </span>
                    </td>
                    <td class="text-center">
                        <span class="status-badge @(item.IsActive ? "success" : "secondary")">
                            @(item.IsActive ? "Đang bật" : "Đã tắt")
                        </span>
                    </td>
                    <td class="text-end">
                        <div class="admin-table-actions justify-content-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" asp-route-status="@status" class="btn btn-coffee-outline admin-pill-button btn-sm">
                                <i class="bx bx-edit"></i>Sửa
                            </a>
                            <form asp-action="ToggleActive" asp-route-id="@item.Id" asp-route-status="@status" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn admin-pill-button btn-sm @(item.IsActive ? "btn-warning text-dark" : "btn-success")" title="@(item.IsActive ? "Tạm ngưng" : "Kích hoạt")">
                                    <i class="bx @(item.IsActive ? "bx-pause" : "bx-play")"></i>
                                </button>
                            </form>
                            @if (status == "Trash")
                            {
                                <form asp-action="Restore" asp-route-id="@item.Id" asp-route-status="@status" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success admin-pill-button btn-sm" title="Khôi phục">
                                        <i class="bx bx-undo"></i>Khôi phục
                                    </button>
                                </form>
                            }
                            else
                            {
                                <form asp-action="Delete" asp-route-id="@item.Id" asp-route-status="@status" method="post" class="d-inline js-confirm-form" data-confirm="Chắc chắn chuyển sản phẩm này vào thùng rác?">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger admin-pill-button btn-sm" title="Xoá">
                                        <i class="bx bx-trash"></i>Xóa
                                    </button>
                                </form>
                            }
                        </div>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>

