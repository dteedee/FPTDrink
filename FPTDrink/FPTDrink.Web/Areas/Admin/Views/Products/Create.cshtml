@model FPTDrink.Web.Areas.Admin.ViewModels.AdminProductFormViewModel
@{
    ViewData["Title"] = "Thêm sản phẩm mới";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h2 class="mb-1">Thêm sản phẩm mới</h2>
        <p class="text-muted mb-0">Nhập đầy đủ thông tin để sản phẩm hiển thị đúng trên website.</p>
    </div>
    <a asp-action="Index" class="btn btn-coffee-outline">
        <i class="bx bx-arrow-back me-2"></i>Danh sách sản phẩm
    </a>
</div>

<form asp-action="Create" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()
    <partial name="_Form" model="Model" />
    <div class="mt-4 d-flex justify-content-end gap-2">
        <button type="reset" class="btn btn-coffee-outline"><i class="bx bx-reset me-2"></i>Làm mới</button>
        <button type="submit" class="btn btn-coffee"><i class="bx bx-save me-2"></i>Lưu sản phẩm</button>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

