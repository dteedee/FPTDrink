@model FPTDrink.Web.Areas.Admin.ViewModels.AdminSupplierFormViewModel
@{
    ViewData["Title"] = $"Chỉnh sửa {Model.Title}";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">Chỉnh sửa nhà cung cấp</h2>
        <p class="text-muted mb-0">Cập nhật thông tin để giữ liên lạc chính xác.</p>
    </div>
    <a asp-action="Index" class="btn btn-coffee-outline"><i class="bx bx-arrow-back me-2"></i>Danh sách</a>
</div>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <partial name="_Form" model="Model" />
    <div class="mt-4 d-flex justify-content-end gap-2">
        <button type="reset" class="btn btn-coffee-outline"><i class="bx bx-eraser me-2"></i>Hoàn tác</button>
        <button type="submit" class="btn btn-coffee"><i class="bx bx-save me-2"></i>Cập nhật</button>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

