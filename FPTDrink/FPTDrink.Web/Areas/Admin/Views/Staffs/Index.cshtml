@model IReadOnlyList<FPTDrink.Web.Areas.Admin.ViewModels.AdminStaffListItemViewModel>
@{
    ViewData["Title"] = "Nhân viên";
    var status = ViewBag.Status as string ?? "Index";
    var search = ViewBag.Search as string;
}

<div class="admin-page-header">
    <div class="admin-page-title">
        <h2>Nhân viên</h2>
        <p>Quản lý tài khoản nhân sự và phân quyền hệ thống.</p>
    </div>
    <div class="admin-page-actions">
        <a asp-action="Create" class="btn btn-coffee admin-pill-button">
            <i class="bx bx-user-plus"></i>Thêm nhân viên
        </a>
    </div>
</div>

<div class="admin-subnav">
    <a asp-action="Index" asp-route-status="Index" class="@(status == "Index" ? "active" : "")"><i class="bx bx-user-check me-1"></i>Đang làm việc</a>
    <a asp-action="Index" asp-route-status="All" class="@(status == "All" ? "active" : "")"><i class="bx bx-list-ul me-1"></i>Tất cả</a>
    <a asp-action="Index" asp-route-status="Trash" class="@(status == "Trash" ? "active" : "")"><i class="bx bx-trash me-1"></i>Thùng rác</a>
</div>

<form method="get" class="admin-filter-bar row g-3">
    <div class="col-lg-3">
        <input type="hidden" name="status" value="@status" />
        <label class="form-label">Trạng thái</label>
        <div class="form-control-plaintext fw-semibold">
            @(status switch { "All" => "Tất cả", "Trash" => "Đã khoá", _ => "Đang làm việc" })
        </div>
    </div>
    <div class="col-lg-6">
        <label class="form-label">Từ khóa</label>
        <div class="input-group">
            <span class="input-group-text"><i class="bx bx-search"></i></span>
            <input class="form-control" type="text" name="search" value="@search" placeholder="Tên, tài khoản, email, SĐT..." />
        </div>
    </div>
    <div class="col-lg-3 d-flex align-items-end gap-2">
        <button class="btn btn-coffee admin-pill-button flex-grow-1" type="submit"><i class="bx bx-filter-alt"></i>Lọc</button>
        <a asp-action="Index" class="btn btn-coffee-outline admin-pill-button"><i class="bx bx-reset"></i></a>
    </div>
</form>

<div class="admin-table-wrapper">
    <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th class="stt-column">STT</th>
                <th class="sortable-header sort-none">Tài khoản</th>
                <th class="sortable-header sort-none">Nhân viên</th>
                <th class="sortable-header sort-none">Liên hệ</th>
                <th class="sortable-header sort-none">Chức vụ</th>
                <th class="text-center sortable-header sort-none">Trạng thái</th>
                <th class="text-end">Thao tác</th>
            </tr>
        </thead>
        <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="7" class="text-center text-muted py-4">Chưa có nhân viên phù hợp.</td>
            </tr>
        }
        else
        {
            var stt = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td class="stt-column">@(stt++)</td>
                    <td>
                        <strong>@item.Username</strong>
                        <div class="small text-muted">@item.Id</div>
                    </td>
                    <td>
                        <div>@item.DisplayName</div>
                        <small class="text-muted">@item.FullName</small>
                    </td>
                    <td>
                        <div><i class="bx bx-phone me-1"></i>@item.Phone</div>
                        <div><i class="bx bx-envelope me-1"></i>@item.Email</div>
                    </td>
                    <td>@item.RoleName</td>
                    <td class="text-center">
                        <span class="status-badge @(item.IsActive ? "success" : "secondary")">
                            @(item.IsActive ? "Đang hoạt động" : "Đã khóa")
                        </span>
                    </td>
                    <td class="text-end">
                        <div class="admin-table-actions justify-content-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" asp-route-status="@status" class="btn btn-coffee-outline admin-pill-button btn-sm"><i class="bx bx-edit"></i>Sửa</a>
                            @if (status == "Trash")
                            {
                                <form asp-action="Restore" asp-route-id="@item.Id" asp-route-status="@status" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success admin-pill-button btn-sm" title="Mở khóa"><i class="bx bx-lock-open-alt"></i>Mở khóa</button>
                                </form>
                            }
                            else
                            {
                                <form asp-action="Delete" asp-route-id="@item.Id" asp-route-status="@status" method="post" class="d-inline js-confirm-form" data-confirm="Khóa tài khoản nhân viên này?">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger admin-pill-button btn-sm" title="Khóa tài khoản"><i class="bx bx-lock-alt"></i>Khóa</button>
                                </form>
                            }
                            <form asp-action="ResetPassword" asp-route-id="@item.Id" asp-route-status="@status" method="post" class="d-inline js-confirm-form" data-confirm="Cấp lại mật khẩu mới cho nhân viên?">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-warning admin-pill-button btn-sm text-dark" title="Reset mật khẩu"><i class="bx bx-key"></i>Mật khẩu</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>

