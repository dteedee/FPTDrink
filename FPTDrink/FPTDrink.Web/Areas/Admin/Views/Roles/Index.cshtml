@model IReadOnlyList<FPTDrink.Web.Areas.Admin.ViewModels.AdminRoleViewModel>
@{
    ViewData["Title"] = "Chức vụ & phân quyền";
}

<div class="admin-page-header">
    <div class="admin-page-title">
        <h2>Chức vụ</h2>
        <p>Quản lý quyền hạn sử dụng hệ thống của từng nhóm nhân viên.</p>
    </div>
    <div class="admin-page-actions">
        <a asp-action="Create" class="btn btn-coffee admin-pill-button">
            <i class="bx bx-plus"></i>Thêm chức vụ
        </a>
    </div>
</div>

@{
    var status = ViewBag.Status as string ?? "Index";
    var search = ViewBag.Search as string;
}

<div class="admin-subnav">
    <a asp-action="Index" asp-route-status="Index" class="@(status == "Index" ? "active" : "")"><i class="bx bx-check-shield me-1"></i>Đang sử dụng</a>
    <a asp-action="Index" asp-route-status="All" class="@(status == "All" ? "active" : "")"><i class="bx bx-list-ul me-1"></i>Tất cả</a>
    <a asp-action="Index" asp-route-status="Trash" class="@(status == "Trash" ? "active" : "")"><i class="bx bx-trash me-1"></i>Thùng rác</a>
</div>

<form method="get" class="admin-filter-bar row g-3">
    <input type="hidden" name="status" value="@status" />
    <div class="col-lg-8">
        <label class="form-label">Từ khóa tìm kiếm</label>
        <div class="input-group">
            <span class="input-group-text"><i class="bx bx-search"></i></span>
            <input type="text" name="search" value="@search" class="form-control" placeholder="Tên chức vụ, mô tả..." />
        </div>
    </div>
    <div class="col-lg-4 d-flex align-items-end gap-2">
        <button type="submit" class="btn btn-coffee admin-pill-button flex-grow-1">
            <i class="bx bx-filter-alt"></i>Tìm kiếm
        </button>
        <a asp-action="Index" class="btn btn-coffee-outline admin-pill-button">
            <i class="bx bx-reset"></i>
        </a>
    </div>
</form>

<div class="admin-table-wrapper">
    <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th class="stt-column">STT</th>
                <th class="sortable-header sort-none">Chức vụ</th>
                <th class="sortable-header sort-none">Mô tả</th>
                <th class="text-center sortable-header sort-none">Trạng thái</th>
                <th class="text-end">Thao tác</th>
            </tr>
        </thead>
        <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center text-muted py-4">Không có chức vụ nào.</td>
            </tr>
        }
        else
        {
            var stt = 1;
            foreach (var role in Model)
            {
                <tr>
                    <td class="stt-column">@(stt++)</td>
                    <td><strong>@role.Title</strong></td>
                    <td>@role.Description</td>
                    <td class="text-center">
                        <span class="status-badge @(role.Status != 0 ? "success" : "secondary")">
                            @(role.Status != 0 ? "Đang sử dụng" : "Tạm ngưng")
                        </span>
                    </td>
                    <td class="text-end">
                        <div class="admin-table-actions justify-content-end">
                            <a asp-action="Permissions" asp-route-id="@role.Id" class="btn btn-coffee-outline admin-pill-button btn-sm">
                                <i class="bx bx-shield-quarter"></i>Quyền
                            </a>
                            @if (!string.Equals(role.Title, "Quản lý", StringComparison.OrdinalIgnoreCase))
                            {
                            <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-coffee-outline admin-pill-button btn-sm">
                                <i class="bx bx-edit"></i>Sửa
                            </a>
                                <form asp-action="ToggleActive" asp-route-id="@role.Id" asp-route-status="@status" method="post" class="d-inline js-confirm-form" data-confirm="Bạn có chắc muốn thay đổi trạng thái của chức vụ này?">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn admin-pill-button btn-sm @(role.Status != 0 ? "btn-warning text-dark" : "btn-success")" title="@(role.Status != 0 ? "Tạm ngưng" : "Kích hoạt")">
                                    <i class="bx @(role.Status != 0 ? "bx-pause" : "bx-play")"></i>
                                </button>
                            </form>
                            @if (status == "Trash")
                            {
                                <form asp-action="Restore" asp-route-id="@role.Id" asp-route-status="@status" method="post" class="d-inline js-confirm-form" data-confirm="Khôi phục chức vụ này?">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success admin-pill-button btn-sm" title="Khôi phục">
                                        <i class="bx bx-undo"></i>Khôi phục
                                    </button>
                                </form>
                            }
                            else
                            {
                                <form asp-action="Delete" asp-route-id="@role.Id" asp-route-status="@status" method="post" class="d-inline js-confirm-form" data-confirm="Chuyển chức vụ này vào thùng rác?">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger admin-pill-button btn-sm" title="Xóa">
                                        <i class="bx bx-trash"></i>Xóa
                                    </button>
                                </form>
                                }
                            }
                            else
                            {
                                <span class="badge bg-info text-dark ms-2">
                                    <i class="bx bx-shield-check"></i> Full quyền
                                </span>
                            }
                        </div>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>

