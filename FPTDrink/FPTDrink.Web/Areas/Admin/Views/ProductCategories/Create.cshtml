@model FPTDrink.Web.Areas.Admin.ViewModels.AdminProductCategoryFormViewModel
@{
    ViewData["Title"] = "Thêm loại sản phẩm";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">Thêm loại sản phẩm</h2>
        <p class="text-muted mb-0">Tạo danh mục mới để phân loại sản phẩm.</p>
    </div>
    <a asp-action="Index" class="btn btn-coffee-outline"><i class="bx bx-arrow-back me-2"></i>Danh sách</a>
</div>

<form asp-action="Create" method="post" novalidate>
    @Html.AntiForgeryToken()
    <partial name="_Form" model="Model" />
    <div class="mt-4 d-flex justify-content-end gap-2">
        <button type="reset" class="btn btn-coffee-outline"><i class="bx bx-reset me-2"></i>Làm mới</button>
        <button type="submit" class="btn btn-coffee"><i class="bx bx-save me-2"></i>Lưu</button>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

